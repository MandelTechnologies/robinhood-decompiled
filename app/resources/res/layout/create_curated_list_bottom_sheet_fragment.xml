<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="?attr/bottomSheetStyle">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:gravity="center"
        android:id="@+id/create_curated_list_title"
        android:paddingTop="@dimen/rds_spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/watchlist_create_new_list"
        android:paddingStart="@dimen/rds_spacing_medium"
        android:paddingEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayLarge"
        android:id="@+id/create_curated_list_emoji_box"
        android:background="@drawable/create_curated_list_emoji_box_background"
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:backgroundTint="?attr/colorBackground2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_curated_list_title"/>
    <ImageView
        android:background="@drawable/create_curated_list_edit_emoji_background"
        android:padding="@dimen/rds_spacing_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?attr/colorBackground1"
        android:contentDescription="@string/create_list_edit_emoji_content_description"
        android:translationX="@dimen/rds_spacing_xsmall"
        android:translationY="@dimen/rds_spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/create_curated_list_emoji_box"
        app:layout_constraintEnd_toEndOf="@+id/create_curated_list_emoji_box"
        app:srcCompat="?attr/iconEdit12dp"/>
    <com.robinhood.android.designsystem.textinput.RdsTextInputContainerView
        android:id="@+id/create_curated_list_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_curated_list_emoji_box"
        style="?attr/inputContainerStyle">
        <com.robinhood.android.designsystem.textinput.RdsTextInputEditText
            android:id="@+id/create_curated_list_list_name_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/list_name"
            style="?attr/inputStyle"/>
    </com.robinhood.android.designsystem.textinput.RdsTextInputContainerView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:layout_gravity="end|center_vertical"
        android:id="@+id/create_curated_list_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:text="@string/create_curated_list"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_curated_list_list_name"
        style="?attr/primaryButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:layout_gravity="end|center_vertical"
        android:id="@+id/create_curated_list_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_large"
        android:text="@string/cancel_curated_list"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_curated_list_create"
        app:layout_constraintWidth_default="wrap"
        style="?attr/legacyGhostButtonStyle"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Surface.Snackbar"
        android:id="@+id/create_curated_list_snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
