<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/rds_spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:id="@+id/option_upgrade_professional_question_question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/option_upgrade_professional_question_investment_advice"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center_horizontal"
        android:id="@+id/option_upgrade_professional_question_disclaimer_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/option_upgrade_professional_disclaimer"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/option_upgrade_professional_question_no_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/general_label_no"
        style="?attr/primaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/option_upgrade_professional_question_yes_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:text="@string/general_label_yes"
        style="?attr/secondaryMonochromeButtonStyle"/>
</androidx.appcompat.widget.LinearLayoutCompat>
