<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_question_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:id="@+id/image_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/image_question_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintTop_toBottomOf="@+id/image_question_title"/>
        <com.robinhood.android.designsystem.textinput.RdsTextInputContainerView
            android:id="@+id/image_question_text_input_container"
            android:padding="@dimen/rds_spacing_medium"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/image_question_subtitle"
            style="?attr/inputContainerStyle">
            <com.robinhood.android.designsystem.textinput.RdsTextInputEditText
                android:gravity="start|top"
                android:id="@+id/image_question_text_input"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dispute_free_response_input_hint"
                android:lines="5"
                android:inputType="textMultiLine"
                style="?attr/inputStyle"/>
        </com.robinhood.android.designsystem.textinput.RdsTextInputContainerView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_question_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/image_question_upload_button"
            app:layout_constraintHeight_min="@dimen/dispute_file_selection_list_min_height"
            app:layout_constraintTop_toBottomOf="@+id/image_question_text_input_container"
            app:layout_goneMarginTop="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/image_question_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/dispute_upload_media"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:icon="@drawable/ic_rds_camera_16dp"
            app:layout_constraintBottom_toTopOf="@+id/image_question_continue_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_question_recycler_view"
            app:layout_constraintVertical_bias="1"
            style="?attr/legacyGhostButtonStyle"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/image_question_continue_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/general_label_continue"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1"
            style="?attr/primaryButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView>
