<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/options_strategy_builder_tour_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:id="@+id/options_strategy_builder_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/strategy_filters_recyclerview"
        android:paddingLeft="@dimen/filter_pills_padding"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingRight="@dimen/filter_pills_padding"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/filter_pills_padding"
        android:paddingVertical="@dimen/rds_spacing_default"
        app:layoutManager="com.robinhood.android.common.ui.HorizontalCardsLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/options_strategy_builder_header"/>
    <com.robinhood.android.optionsstrategybuilder.pickers.DatePickerContainer
        android:id="@+id/date_picker_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/strategy_filters_recyclerview"/>
    <com.robinhood.android.optionsstrategybuilder.rows.NotViewPagerRecyclerView
        android:id="@+id/strategy_chain_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_container"/>
    <include
        android:id="@+id/strategy_chain_scroll_indicator_top"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_container"
        layout="@layout/include_equity_quote_divider_without_top_divider"/>
    <include
        android:id="@+id/strategy_chain_scroll_indicator_bottom"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/include_equity_quote_divider"/>
    <com.robinhood.android.educationtour.EducationTourEntryPointView
        android:id="@+id/education_tour_entry_point"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_container"/>
    <com.robinhood.android.designsystem.tooltip.RdsTooltipView
        android:id="@+id/chain_customization_tooltip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_small"
        android:layout_marginRight="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_spacing_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:nibDirection="up"
        app:nibHorizontalBias="0.97"/>
    <com.robinhood.android.optionchain.tooltips.OptionChainTooltipView
        android:id="@+id/chain_settle_on_open_tooltip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_container"
        app:nibDirection="up"
        style="?attr/tooltipStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
