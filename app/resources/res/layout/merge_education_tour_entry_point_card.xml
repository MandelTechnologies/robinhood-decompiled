<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:contentDescription="@string/education_tour_entry_point_card_content_description">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/rounded_background_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/education_tour_entry_point_card_height"
        android:paddingEnd="@dimen/rds_spacing_default"
        android:backgroundTint="?attr/colorBackground1">
        <ImageButton
            android:id="@+id/entry_point_card_dismiss_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="@dimen/button_content_icon_size"
            android:layout_height="@dimen/button_content_icon_size"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:tint="?android:attr/textColorPrimary"
            android:contentDescription="@string/general_label_dismiss"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rds_close_24dp"/>
        <ImageView
            android:id="@+id/entry_point_card_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/education_tour_entry_point_card_image_max_width"
            android:maxHeight="@dimen/education_tour_entry_point_card_image_max_height"
            android:contentDescription="@string/education_tour_entry_point_img_content_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularLarge"
            android:textColor="?android:attr/textColorPrimary"
            android:id="@+id/entry_point_card_message_txt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toTopOf="@+id/entry_point_action_txt"
            app:layout_constraintEnd_toStartOf="@+id/entry_point_card_dismiss_btn"
            app:layout_constraintStart_toEndOf="@+id/entry_point_card_image"
            app:layout_constraintTop_toBottomOf="@+id/entry_point_card_dismiss_btn"/>
        <com.robinhood.android.designsystem.button.RdsTextButton
            android:id="@+id/entry_point_action_txt"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/entry_point_card_message_txt"
            style="?attr/textButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
