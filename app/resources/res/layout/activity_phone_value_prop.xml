<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center_horizontal"
                android:id="@+id/phone_animated_header"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="84dp"
                android:layout_marginRight="84dp"
                android:adjustViewBounds="true"
                android:layout_marginHorizontal="84dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/phone_static_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_xlarge"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginRight="@dimen/rds_spacing_xlarge"
                android:layout_marginBottom="@dimen/rds_spacing_small"
                android:scaleType="centerInside"
                android:layout_marginHorizontal="@dimen/rds_spacing_xlarge"
                android:layout_marginVertical="@dimen/rds_spacing_small"
                app:srcCompat="@drawable/svg_ic_phone_verify_value_prop"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplaySmall"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_large"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:text="@string/phone_value_prop_title"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:gravity="center_horizontal"
                android:id="@+id/phone_value_prop_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/phone_value_prop_one"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_default"
                app:leadingIcon="?attr/iconSparkleBullet24dp"
                style="?attr/valuePropRowContainerStyle"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/phone_value_prop_two"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:leadingIcon="?attr/iconSparkleBullet24dp"
                app:primaryText="@string/phone_value_prop_two_primary"
                style="?attr/valuePropRowContainerStyle"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
