<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/options_rolling_select_contract_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/options_rolling_subtitle_text"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/options_rolling_data_subtitle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/cursed_spacer"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bottom_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/options_rolling_net_cost_title"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/options_rolling_net_cost_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:text="@string/options_rolling_net_credit_title_text"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            app:layout_constraintEnd_toStartOf="@+id/options_rolling_total_cost_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/options_rolling_net_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/cursed_spacer"
            app:layout_constraintEnd_toEndOf="@+id/options_rolling_net_cost_title"
            app:layout_constraintStart_toStartOf="@+id/options_rolling_net_cost_title"
            app:layout_constraintTop_toTopOf="@+id/cursed_spacer"
            style="@style/RollingStatsView"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/options_rolling_total_cost_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:text="@string/options_rolling_total_credit_title_text"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            app:layout_constraintEnd_toStartOf="@+id/options_rolling_time_increase_title"
            app:layout_constraintStart_toEndOf="@+id/options_rolling_net_cost_title"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/options_rolling_total_credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/cursed_spacer"
            app:layout_constraintEnd_toEndOf="@+id/options_rolling_total_cost_title"
            app:layout_constraintStart_toStartOf="@+id/options_rolling_total_cost_title"
            app:layout_constraintTop_toTopOf="@+id/cursed_spacer"
            style="@style/RollingStatsView"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/options_rolling_time_increase_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:text="@string/options_rolling_time_change_title_text"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/options_rolling_total_cost_title"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/options_rolling_time_increase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/cursed_spacer"
            app:layout_constraintEnd_toEndOf="@+id/options_rolling_time_increase_title"
            app:layout_constraintStart_toStartOf="@+id/options_rolling_time_increase_title"
            app:layout_constraintTop_toTopOf="@+id/cursed_spacer"
            style="@style/RollingStatsView"/>
        <Space
            android:id="@+id/bottom_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
