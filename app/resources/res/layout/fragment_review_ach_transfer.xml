<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/rds_row_horizontal_spacing"
                android:paddingTop="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_row_horizontal_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/rds_row_horizontal_spacing">
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayLarge"
                    android:gravity="center"
                    android:id="@+id/amount_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:gravity="center"
                    android:id="@+id/add_withdraw_label_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:textColor="?android:attr/textColorSecondary"
                    android:gravity="center"
                    android:id="@+id/add_withdraw_bank_label_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:gravity="center"
                    android:id="@+id/transfer_disclaimer_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <com.robinhood.android.designsystem.button.RdsButton
            android:textColor="?attr/colorBackground1"
            android:id="@+id/add_withdraw_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            android:text="@string/ach_transfer_deposit_action"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            style="?attr/primaryButtonStyle"/>
    </LinearLayout>
    <com.robinhood.android.common.p088ui.ShimmerLoadingView
        android:id="@+id/loading_view"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/toolbar_elevation"/>
</FrameLayout>
