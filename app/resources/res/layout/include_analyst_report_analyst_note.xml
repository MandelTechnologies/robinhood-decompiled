<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.common.view.RhCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="?attr/surfaceTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rds_spacing_default"
    android:layout_marginStart="@dimen/rds_spacing_small"
    android:layout_marginEnd="@dimen/rds_spacing_small"
    android:backgroundTint="?attr/colorBackground1">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textSize="15sp"
            android:id="@+id/analyst_reports_note_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capsule_sans_text_bold"
            style="?attr/textAppearanceRegularMedium"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textColor="?android:attr/textColorPrimary"
            android:ellipsize="end"
            android:id="@+id/analyst_reports_note_body_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:maxLines="3"
            style="?attr/textAppearanceRegularSmall"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textColor="?android:attr/textColorSecondary"
            android:id="@+id/analyst_reports_note_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            style="?attr/textAppearanceRegularSmall"/>
    </LinearLayout>
</com.robinhood.android.common.view.RhCardView>
