<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/dispute_submitted_splash_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/dispute_submitted_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/svg_dispute_submitted"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:id="@+id/dispute_submitted_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_xlarge"
        android:text="@string/dispute_submitted_title"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/dispute_submitted_temporary_credit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dispute_submitted_splash_image"/>
    <com.robinhood.android.designsystem.pog.RdsPogView
        android:id="@+id/dispute_submitted_temporary_credit_pog"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dispute_submitted_temporary_credit_text"
        app:number="1"
        style="?attr/numberPogStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/dispute_submitted_temporary_credit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:text="@string/dispute_submitted_temporary_credit"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/dispute_submitted_status_change_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dispute_submitted_temporary_credit_pog"
        app:layout_constraintTop_toBottomOf="@+id/dispute_submitted_title"/>
    <com.robinhood.android.designsystem.pog.RdsPogView
        android:id="@+id/dispute_submitted_status_change_pog"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dispute_submitted_status_change_text"
        app:number="2"
        style="?attr/numberPogStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/dispute_submitted_status_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/dispute_submitted_status_change"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        android:layout_marginVertical="@dimen/rds_spacing_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/dispute_submitted_done_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dispute_submitted_status_change_pog"
        app:layout_constraintTop_toBottomOf="@+id/dispute_submitted_temporary_credit_text"
        app:layout_goneMarginStart="@dimen/rds_spacing_medium"
        app:layout_goneMarginTop="@dimen/rds_spacing_small"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/dispute_submitted_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_done"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
