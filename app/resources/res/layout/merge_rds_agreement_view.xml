<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/agreement_panel"
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/toolbar_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/agreementPanelStyle">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:gravity="center"
            android:id="@+id/agreement_description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_small"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:layout_gravity="center"
            android:id="@+id/agreement_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?attr/primaryButtonStyle"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/agreement_scroll_view"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toTopOf="@+id/agreement_panel"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayMedium"
                android:gravity="center"
                android:id="@+id/agreement_title_txt"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rds_spacing_small"
                android:paddingHorizontal="@dimen/rds_spacing_default"
                style="?attr/agreementTextStyle"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:gravity="center"
                android:id="@+id/agreement_header_txt"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rds_spacing_medium"
                android:paddingHorizontal="@dimen/rds_spacing_default"
                style="?attr/agreementTextStyle"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:id="@+id/agreement_txt"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/rds_spacing_default"
                style="?attr/agreementTextStyle"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularSmall"
                android:id="@+id/agreement_effective_date_txt"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:paddingHorizontal="@dimen/rds_spacing_default"/>
            <androidx.compose.p011ui.platform.ComposeView
                android:id="@+id/additional_checkboxes_compose_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</merge>
