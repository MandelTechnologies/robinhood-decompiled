<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.designsystem.container.RdsRippleContainerView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_indicator_layout"
    android:paddingLeft="@dimen/rds_spacing_medium"
    android:paddingRight="@dimen/rds_spacing_medium"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorBackground1"
    android:paddingHorizontal="@dimen/rds_spacing_medium"
    style="?attr/rowContainerStyle">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:gravity="center"
            android:id="@+id/add_indicator_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_hub_indicator_list_add_indicator"
            android:drawablePadding="@dimen/rds_spacing_default"
            android:drawableStart="@drawable/ic_rds_bubble_plus_24dp"
            android:drawableTint="?attr/colorForeground1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textAppearanceRegularMedium"/>
        <include
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_indicator_btn"
            layout="@layout/include_rds_divider"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.robinhood.android.designsystem.container.RdsRippleContainerView>
