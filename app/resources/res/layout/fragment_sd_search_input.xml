<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.odyssey.lib.view.SdTextView
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            android:gravity="center_horizontal"
            android:id="@+id/sd_search_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.odyssey.lib.view.SdTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="center_horizontal"
            android:id="@+id/sd_search_input_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:useLinkMovementMethod="true"/>
        <com.robinhood.android.odyssey.lib.view.SdInputRow
            android:id="@+id/sd_search_input_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_small"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:drawableStartTint="?attr/colorForeground2"
            style="?attr/inputContainerStyle">
            <com.robinhood.android.designsystem.textinput.RdsFormattedEditText
                android:id="@+id/sd_search_input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:useCustomNumpad="false"
                style="?attr/inputStyle"/>
        </com.robinhood.android.odyssey.lib.view.SdInputRow>
    </LinearLayout>
    <com.robinhood.android.odyssey.lib.view.SdListOptionsView
        android:id="@+id/sd_search_input_list_options_view"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.robinhood.android.designsystem.numpad.RdsNumpadView
        android:id="@+id/sd_search_input_numpad"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
