<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.optionschain.OptionContractRowView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/row_background"
    android:animateLayoutChanges="true"
    android:backgroundTint="?attr/colorBackground1"
    app:scarlet_childContext="notAnimatedAndInherit">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularLarge"
        android:id="@+id/option_contract_strike_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/added_to_watchlist_check"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?attr/colorPrimary"
        android:layout_marginStart="@dimen/rds_spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/option_contract_strike_price_txt"
        app:layout_constraintStart_toEndOf="@+id/option_contract_position_count_txt"
        app:layout_constraintTop_toTopOf="@+id/option_contract_strike_price_txt"
        app:srcCompat="@drawable/ic_rds_bubble_checked_16dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/option_contract_position_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_small"
        app:layout_constraintBaseline_toBaselineOf="@+id/option_contract_strike_price_txt"
        app:layout_constraintStart_toEndOf="@+id/option_contract_strike_price_txt"/>
    <com.robinhood.android.common.view.AnimatedRhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="@color/ticker_text_primary_color_selector"
        android:gravity="center"
        android:id="@+id/option_contract_price_txt"
        android:background="@drawable/option_quote_left_background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:paddingStart="@dimen/option_price_with_plus_button_horizontal_padding"
        android:paddingEnd="@dimen/rds_spacing_small"
        android:backgroundTint="@color/ticker_text_primary_color_selector"
        app:layout_constraintBottom_toTopOf="@+id/option_contract_price_delta_txt"
        app:layout_constraintEnd_toStartOf="@+id/option_contract_plus_btn"
        app:layout_constraintTop_toTopOf="@+id/option_contract_strike_price_txt"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:gravity="center"
        android:id="@+id/option_contract_plus_btn"
        android:background="@drawable/option_quote_right_background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:tint="@color/ticker_text_primary_color_selector"
        android:paddingStart="@dimen/rds_spacing_small"
        android:paddingEnd="@dimen/option_price_with_plus_button_horizontal_padding"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        android:backgroundTint="@color/ticker_text_primary_color_selector"
        app:layout_constraintBottom_toTopOf="@+id/option_contract_price_delta_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/option_contract_strike_price_txt"
        app:srcCompat="?attr/iconPlus12dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textSize="13sp"
        android:textColor="?attr/colorForeground3"
        android:id="@+id/option_contract_message_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_xsmall"
        app:layout_constraintBottom_toTopOf="@+id/option_contract_bottom_space"
        app:layout_constraintEnd_toStartOf="@+id/option_contract_price_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_strike_price_txt"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/option_contract_metric_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:labelText="@string/option_order_contract_breakeven_rds_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_strike_price_txt"
        style="@style/OptionChainStatRow"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/option_contract_metric_two_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toEndOf="@+id/option_contract_metric_one_txt"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_strike_price_txt"
        style="@style/OptionChainStatRow"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textSize="13sp"
        android:textColor="?attr/colorPrimary"
        android:id="@+id/option_contract_price_delta_txt"
        android:paddingTop="@dimen/rds_spacing_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="@+id/option_contract_metric_one_txt"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/coloredTextViewStyle"/>
    <Space
        android:id="@+id/option_contract_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rds_spacing_default"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_price_delta_txt"/>
    <include
        android:id="@+id/option_contract_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_default"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_bottom_space"
        layout="@layout/include_rds_divider"/>
</com.robinhood.android.optionschain.OptionContractRowView>
