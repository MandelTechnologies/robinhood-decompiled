<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        android:layout_marginVertical="@dimen/rds_spacing_small"
        app:cardBackgroundColor="?attr/colorBackground1"
        app:cardCornerRadius="@dimen/rds_spacing_small"
        app:cardElevation="0dp"
        app:strokeColor="?attr/colorBackground3"
        app:strokeWidth="1dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/question_content"
                layout="@layout/question_content_view"/>
            <View
                android:id="@+id/question_card_answer_divider"
                android:background="?attr/colorBackground3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/question_card_answer_container"
                android:background="?attr/colorBackground2"
                android:padding="@dimen/rds_spacing_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textColor="?attr/colorForeground2"
                    android:gravity="center"
                    android:id="@+id/question_card_unanswered_text"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/question_card_unanswered"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?attr/textAppearanceRegularSmall"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:id="@+id/question_card_answerer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/question_card_answerer_image"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?attr/textAppearanceRegularSmallBold"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textColor="?attr/colorForeground2"
                    android:id="@+id/question_card_answerer_position"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/question_card_answerer_name"
                    app:layout_constraintStart_toStartOf="@+id/question_card_answerer_name"
                    app:layout_constraintTop_toBottomOf="@+id/question_card_answerer_name"
                    style="?attr/textAppearanceRegularSmall"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:id="@+id/question_card_answer_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/question_card_answerer_position"
                    style="?attr/textAppearanceRegularMedium"/>
                <View
                    android:id="@+id/question_card_answerer_image_border"
                    android:background="@drawable/circle_bg"
                    android:layout_width="@dimen/portrait_border_size"
                    android:layout_height="@dimen/portrait_border_size"
                    android:layout_marginLeft="@dimen/rds_spacing_medium"
                    android:layout_marginRight="@dimen/rds_spacing_medium"
                    android:backgroundTint="?attr/colorBackground3"
                    android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/question_card_answerer_image"
                    app:layout_constraintEnd_toEndOf="@+id/question_card_answerer_image"
                    app:layout_constraintStart_toStartOf="@+id/question_card_answerer_image"
                    app:layout_constraintTop_toTopOf="@+id/question_card_answerer_image"/>
                <ImageView
                    android:id="@+id/question_card_answerer_image"
                    android:layout_width="@dimen/portrait_size"
                    android:layout_height="@dimen/portrait_size"
                    android:contentDescription="@string/cd_portrait"
                    android:layout_marginEnd="@dimen/rds_spacing_small"
                    app:layout_constraintBottom_toBottomOf="@+id/question_card_answerer_position"
                    app:layout_constraintEnd_toStartOf="@+id/question_card_answerer_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/question_card_answerer_name"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/question_card_answered_image_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="question_card_answerer_image,question_card_answerer_image_border"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/question_card_answered_text_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="question_card_answerer_name,question_card_answerer_position,question_card_answer_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</merge>
