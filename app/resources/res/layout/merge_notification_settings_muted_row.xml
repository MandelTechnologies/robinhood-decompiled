<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.common.p088ui.AvatarView
            android:id="@+id/avatar_view"
            android:layout_width="@dimen/thread_avatar_size"
            android:layout_height="@dimen/thread_avatar_size"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/rowAvatarStyle"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/row_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toBottomOf="@+id/avatar_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar_view"
            app:layout_constraintTop_toTopOf="@+id/avatar_view"/>
        <include
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/rds_spacing_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatar_view"
            layout="@layout/include_rds_divider"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
