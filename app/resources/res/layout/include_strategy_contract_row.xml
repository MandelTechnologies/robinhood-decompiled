<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.optionsstrategybuilder.rows.OptionStrategyRowView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/row_background"
    android:animateLayoutChanges="true"
    android:backgroundTint="?attr/colorBackground1"
    app:scarlet_childContext="notAnimatedAndInherit">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularLarge"
        android:id="@+id/option_contract_strike_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textColor="?attr/colorPrimary"
        android:id="@+id/option_strategy_position_indicator"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_small"
        app:layout_constraintBaseline_toBaselineOf="@+id/option_contract_strike_price_txt"
        app:layout_constraintStart_toEndOf="@+id/option_contract_strike_price_txt"/>
    <com.robinhood.android.common.view.AnimatedRhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="@color/ticker_text_primary_color_selector"
        android:gravity="center"
        android:id="@+id/option_contract_price_txt"
        android:background="@drawable/option_quote_background_with_ripple"
        android:paddingLeft="@dimen/option_price_with_plus_button_horizontal_padding"
        android:paddingRight="@dimen/option_price_with_plus_button_horizontal_padding"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        android:backgroundTint="@color/ticker_text_primary_color_selector"
        android:paddingHorizontal="@dimen/option_price_with_plus_button_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@+id/option_contract_price_delta_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/option_contract_strike_price_txt"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textSize="13sp"
        android:textColor="?attr/colorForeground3"
        android:id="@+id/option_contract_message_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_xsmall"
        app:layout_constraintBottom_toTopOf="@+id/option_contract_bottom_space"
        app:layout_constraintEnd_toStartOf="@+id/price_barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_strike_price_txt"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/price_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="option_contract_price_delta_txt,option_contract_price_txt"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/data_row_view_title_1"
        android:paddingTop="@dimen/rds_spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_strike_price_txt"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:id="@+id/data_row_view_value_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_row_view_title_1"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/data_row_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="data_row_view_title_1,data_row_view_value_1"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/data_row_view_title_2"
        android:paddingTop="@dimen/rds_spacing_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toEndOf="@+id/data_row_barrier"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_strike_price_txt"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:id="@+id/data_row_view_value_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toEndOf="@+id/data_row_barrier"
        app:layout_constraintTop_toBottomOf="@+id/data_row_view_title_2"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textSize="13sp"
        android:textColor="?attr/colorPrimary"
        android:id="@+id/option_contract_price_delta_txt"
        android:paddingTop="@dimen/rds_spacing_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="@+id/data_row_view_value_1"
        app:layout_constraintEnd_toEndOf="parent"
        style="?attr/coloredTextViewStyle"/>
    <Space
        android:id="@+id/option_contract_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rds_spacing_default"
        app:layout_constraintTop_toBottomOf="@+id/data_row_view_value_2"/>
    <include
        android:id="@+id/option_contract_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_default"
        app:layout_constraintTop_toBottomOf="@+id/option_contract_bottom_space"
        layout="@layout/include_rds_divider"/>
</com.robinhood.android.optionsstrategybuilder.rows.OptionStrategyRowView>
