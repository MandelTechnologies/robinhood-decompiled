<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/dash"
        android:background="@drawable/resume_application_dash_background"
        android:layout_width="@dimen/resume_application_dash_width"
        android:layout_height="@dimen/resume_application_dash_height"
        app:layout_constraintEnd_toEndOf="@+id/main_pog"
        app:layout_constraintStart_toStartOf="@+id/main_pog"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.pog.RdsPogView
        android:id="@+id/main_pog"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:backgroundTint="?attr/colorPositive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dash"
        app:pictogram="@drawable/pict_mono_rds_piggy_bank"
        style="?attr/pogStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegular"
        android:textColor="?attr/colorWhite"
        android:id="@+id/subtitle_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/resume_application_timeline_pog_margin"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="@+id/main_pog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_pog"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="?attr/colorWhite"
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/resume_application_timeline_pog_margin"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/subtitle_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_pog"
        app:layout_constraintTop_toTopOf="@+id/main_pog"
        app:layout_constraintVertical_chainStyle="packed"/>
</merge>
