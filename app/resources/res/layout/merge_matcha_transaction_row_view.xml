<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    app:rippleColor="?attr/colorRippleBackground1">
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/avatar_compose_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="@+id/row_text_container"
        app:layout_constraintEnd_toStartOf="@+id/row_text_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_text_container"/>
    <com.robinhood.android.designsystem.row.component.RdsRowTextContainerView
        android:id="@+id/row_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_compose_view"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/rowTextContainerStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textColor="?attr/colorForeground2"
        android:ellipsize="end"
        android:id="@+id/memo_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:maxLines="1"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_compose_view"
        app:layout_constraintTop_toBottomOf="@+id/row_text_container"
        style="?attr/textAppearanceRegularSmall"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/primary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:minWidth="@dimen/matcha_pending_transaction_cta_min_width"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/button_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_text"
        style="?attr/primaryButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/secondary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:minWidth="@dimen/matcha_pending_transaction_cta_min_width"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/button_barrier"
        app:layout_constraintEnd_toStartOf="@+id/primary_button"
        app:layout_constraintTop_toBottomOf="@+id/memo_text"
        app:layout_goneMarginEnd="@dimen/rds_spacing_medium"
        style="?attr/secondaryButtonStyle"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/button_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="primary_button, secondary_button"/>
    <include
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_barrier"
        layout="@layout/include_rds_divider"/>
</merge>
