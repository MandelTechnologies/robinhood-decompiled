<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/rds_spacing_default">
        <com.robinhood.android.designsystem.selectioncontrol.NewRdsRadioButton
            android:id="@+id/selection_row_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/selection_row_primary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toTopOf="@+id/selection_row_secondary_text_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selection_row_control"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/rowPrimaryTextStyle"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/selection_row_secondary_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selection_row_control"
            app:layout_constraintTop_toBottomOf="@+id/selection_row_primary_text">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textStyle="bold"
                android:textColor="?attr/colorPositive"
                android:id="@+id/selection_row_secondary_highlight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/rowSecondaryTextStyle"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:id="@+id/selection_row_secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?attr/rowSecondaryTextStyle"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/selection_row_index_view"
        android:layout_width="1dp"
        android:layout_height="1dp"/>
    <include
        android:layout_gravity="bottom"
        android:id="@+id/selection_row_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/include_rds_divider"/>
</merge>
