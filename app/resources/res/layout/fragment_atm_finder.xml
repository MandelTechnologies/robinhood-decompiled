<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/atm_finder_root_layout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1"
    app:layout_underneathToolbar="true">
    <com.robinhood.android.common.view.StyleableMapView
        android:id="@+id/atm_finder_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cameraTargetLat="39.8283"
        app:cameraTargetLng="-98.5795"
        app:cameraZoom="3"
        app:layout_constraintBottom_toBottomOf="@+id/atm_finder_map_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:mapStyleResource="?attr/mapViewMapStyle"/>
    <FrameLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.robinhood.android.designsystem.button.RdsIconButton
            android:layout_gravity="start"
            android:id="@+id/atm_finder_close_btn"
            android:layout_margin="@dimen/rds_spacing_default"
            android:tint="?attr/colorPrimary"
            android:elevation="4dp"
            android:backgroundTint="?attr/colorBackground2"
            app:srcCompat="?attr/iconClose24dp"
            style="?attr/primaryIconButtonStyle"/>
        <com.robinhood.android.designsystem.button.RdsIconButton
            android:layout_gravity="end"
            android:id="@+id/atm_finder_location_btn"
            android:visibility="gone"
            android:layout_margin="@dimen/rds_spacing_default"
            android:tint="?attr/colorPrimary"
            android:elevation="4dp"
            android:backgroundTint="?attr/colorBackground2"
            app:srcCompat="?attr/iconMyLocation24dp"
            style="?attr/primaryIconButtonStyle"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/atm_finder_map_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.65"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atm_finder_enable_location_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atm_finder_map_guideline">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="center"
            android:id="@+id/atm_finder_enable_location_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/atm_finder_enable_location_prompt"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/atm_finder_enable_location_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/atm_finder_enable_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atm_finder_enable_location_prompt"
            style="?attr/secondaryButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/atm_finder_empty_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atm_finder_map_guideline">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            android:id="@+id/atm_finder_empty_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/atm_finder_no_atms_title"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="center"
            android:id="@+id/atm_finder_empty_view_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/atm_finder_no_atms_detail"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atm_finder_empty_view_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/atm_finder_recycler_view"
        android:visibility="gone"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atm_finder_map_guideline"/>
</androidx.constraintlayout.widget.ConstraintLayout>
