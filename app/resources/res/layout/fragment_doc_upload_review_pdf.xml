<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:gravity="center"
        android:id="@+id/pdf_review_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/pdf_review_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdf_review_title">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="center"
            android:id="@+id/pdf_review_subtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/doc_upload_review_default_subtitle"/>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/pdf_review_header_sdui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/pdf_review_prev_page_btn"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:tint="?attr/colorForeground1"
        android:contentDescription="@string/doc_upload_review_left_btn_content_description"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_arrow_left_24dp"/>
    <ImageView
        android:id="@+id/pdf_review_next_page_btn"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:tint="?attr/colorForeground1"
        android:contentDescription="@string/doc_upload_review_right_btn_content_description"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_arrow_right_24dp"/>
    <ImageView
        android:id="@+id/pdf_review_image"
        android:background="@drawable/pdf_upload_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:scaleType="centerInside"
        android:contentDescription="@null"
        android:layout_marginVertical="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/pdf_review_next_btn"
        app:layout_constraintEnd_toStartOf="@+id/pdf_review_next_page_btn"
        app:layout_constraintStart_toEndOf="@+id/pdf_review_prev_page_btn"
        app:layout_constraintTop_toBottomOf="@+id/pdf_review_header"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/pdf_review_next_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/doc_upload_review_confirm_cta"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/pdf_review_retry_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/pdf_review_retry_cta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rds_spacing_medium"
        android:text="@string/doc_upload_review_retake_cta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/secondaryButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
