<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/direct_ipo_summary_stat_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/direct_ipo_summary_stat_row_icon"
        android:visibility="gone"
        android:layout_width="@dimen/info_tag_icon_size"
        android:layout_height="@dimen/info_tag_icon_size"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/direct_ipo_summary_stat_row_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/direct_ipo_summary_stat_row_value"
        app:scarlet_affectedAttributes="!tint"/>
    <Space
        android:id="@+id/direct_ipo_summary_stat_row_space"
        android:visibility="gone"
        android:layout_width="@dimen/rds_spacing_small"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/direct_ipo_summary_stat_row_icon"
        app:layout_constraintStart_toEndOf="@+id/direct_ipo_summary_stat_row_icon"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:id="@+id/direct_ipo_summary_stat_row_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/direct_ipo_summary_stat_row_space"
        app:layout_constraintTop_toBottomOf="@+id/direct_ipo_summary_stat_row_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
