<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <FrameLayout
        android:id="@+id/rebrand_underlay"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorBackground1"
            app:layout_constraintBottom_toBottomOf="@+id/cardview"
            app:layout_constraintTop_toTopOf="parent"/>
    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="?attr/colorTransparent"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cta_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="spread_inside">
        <com.robinhood.utils.p409ui.view.BlockableNestedScrollView
            android:id="@+id/content_scrollview"
            android:background="@drawable/bottom_rounded_corner_background"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fadeScrollbars="false"
            android:backgroundTint="?attr/colorBackground1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:paddingBottom="@dimen/rds_spacing_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.robinhood.utils.p409ui.view.BlockableNestedScrollView>
    </androidx.cardview.widget.CardView>
    <include
        android:gravity="center_horizontal"
        android:id="@+id/swipe_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        layout="@layout/include_swipe_hint"/>
    <FrameLayout
        android:id="@+id/cta_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/numpad_compose_view">
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/sell_all_button"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/crypto_quote_order_sell_all"
            style="?attr/secondaryButtonStyle"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/review_btn"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/general_action_review"
            style="?attr/primaryButtonStyle"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/quick_trade_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">
            <com.robinhood.android.designsystem.button.RdsButton
                android:id="@+id/quick_trade_1_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="?attr/secondaryButtonStyle"/>
            <com.robinhood.android.designsystem.button.RdsButton
                android:id="@+id/quick_trade_2_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/rds_spacing_default"
                style="?attr/secondaryButtonStyle"/>
            <com.robinhood.android.designsystem.button.RdsButton
                android:id="@+id/quick_trade_3_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/rds_spacing_default"
                style="?attr/secondaryButtonStyle"/>
        </LinearLayout>
    </FrameLayout>
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/numpad_compose_view"
        android:background="#fff"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorBackground1"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.robinhood.android.designsystem.numpad.RdsNumpadView
        android:id="@+id/numpad"
        android:background="#fff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorBackground1"
        app:delimiterLocalized="true"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snackbar_shim"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
