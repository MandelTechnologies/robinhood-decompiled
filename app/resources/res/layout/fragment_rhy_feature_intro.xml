<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorTransparent">
    <include layout="@layout/merge_rhy_intro_guides"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:gravity="center_horizontal"
        android:id="@+id/rhy_feature_intro_title"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/rhy_intro_content_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_intro_content_start_guideline"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center_horizontal"
        android:id="@+id/rhy_feature_intro_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/rhy_intro_content_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_intro_content_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/rhy_feature_intro_title"
        app:useLinkMovementMethod="true"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/rhy_feature_animation_top_guideline"
        android:paddingBottom="@dimen/rds_spacing_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="0dp"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rhy_feature_intro_animation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/rhy_feature_intro_disclosure"
        app:layout_constraintEnd_toEndOf="@+id/rhy_intro_content_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_intro_content_start_guideline"
        app:layout_constraintTop_toTopOf="@+id/rhy_feature_animation_top_guideline"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:gravity="center_horizontal"
        android:id="@+id/rhy_feature_intro_disclosure"
        android:paddingTop="@dimen/rds_spacing_default"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/rds_spacing_xsmall"
        android:drawableEnd="@drawable/ic_rds_pop_out_16dp"
        android:drawableTint="?attr/colorForeground2"
        app:layout_constraintBottom_toBottomOf="@+id/rhy_intro_feature_bottom_guideline"
        app:layout_constraintEnd_toEndOf="@+id/rhy_intro_content_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_intro_content_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/rhy_feature_intro_animation"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/rhy_feature_primary_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rds_spacing_medium"
        android:text="@string/general_label_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rhy_intro_content_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_intro_content_start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/rhy_feature_intro_disclosure"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
