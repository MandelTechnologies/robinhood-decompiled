<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/answer_card_container"
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:backgroundTint="?attr/colorBackground2"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium">
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/answer_card_answerer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/answer_card_answerer_image"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textAppearanceRegularSmallBold"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textColor="?attr/colorForeground2"
            android:id="@+id/answer_card_answerer_position"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/answer_card_answerer_name"
            app:layout_constraintStart_toStartOf="@+id/answer_card_answerer_name"
            app:layout_constraintTop_toBottomOf="@+id/answer_card_answerer_name"
            style="?attr/textAppearanceRegularSmall"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/answer_card_answer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer_card_answerer_position"
            style="?attr/textAppearanceRegularMedium"/>
        <View
            android:id="@+id/answer_card_answerer_image_border"
            android:background="@drawable/circle_bg"
            android:layout_width="@dimen/portrait_border_size"
            android:layout_height="@dimen/portrait_border_size"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:backgroundTint="?attr/colorBackground3"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="@+id/answer_card_answerer_image"
            app:layout_constraintEnd_toEndOf="@+id/answer_card_answerer_image"
            app:layout_constraintStart_toStartOf="@+id/answer_card_answerer_image"
            app:layout_constraintTop_toTopOf="@+id/answer_card_answerer_image"/>
        <ImageView
            android:id="@+id/answer_card_answerer_image"
            android:layout_width="@dimen/portrait_size"
            android:layout_height="@dimen/portrait_size"
            android:contentDescription="@string/cd_company_logo"
            android:layout_marginEnd="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toBottomOf="@+id/answer_card_answerer_position"
            app:layout_constraintEnd_toStartOf="@+id/answer_card_answerer_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/answer_card_answerer_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
