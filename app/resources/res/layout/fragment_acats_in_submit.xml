<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:gravity="center"
            android:id="@+id/title"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingTop="@dimen/rds_spacing_medium"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acats_in_review_submit_title"
            android:paddingHorizontal="@dimen/rds_spacing_medium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMediumBold"
            android:layout_gravity="start"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acats_in_review_external_account_header"
            android:paddingHorizontal="@dimen/rds_spacing_medium"/>
        <include
            android:id="@+id/brokerage_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            layout="@layout/row_brokerage"/>
        <View
            android:background="?attr/colorBackground3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/account_number_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/acats_in_review_account_number_label"
            app:type="condensed"
            style="?attr/dataCondensedRowContainerStyle"/>
        <View
            android:background="?attr/colorBackground3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <FrameLayout
            android:id="@+id/asset_list_row_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.row.RdsDataRowView
                android:id="@+id/asset_list_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                app:labelText="@string/assets_label"
                app:type="condensed"
                style="?attr/dataCondensedRowContainerStyle"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/caret"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="@dimen/rds_spacing_default"
                android:tint="?attr/colorForeground3"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_rds_caret_right_16dp"/>
        </FrameLayout>
        <View
            android:id="@+id/asset_divider"
            android:background="?attr/colorBackground3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMediumBold"
            android:layout_gravity="start"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acats_in_review_robinhood_account_header"
            android:paddingHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/account_name_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/acats_in_review_account_name_label"
            app:type="condensed"
            style="?attr/dataCondensedRowContainerStyle"/>
        <View
            android:background="?attr/colorBackground3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/name_on_account_container"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingTop="@dimen/rds_spacing_default"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:paddingBottom="@dimen/rds_spacing_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/rds_spacing_medium"
            android:paddingVertical="@dimen/rds_spacing_default">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textColor="?attr/colorForeground2"
                android:gravity="start"
                android:id="@+id/name_on_account_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                style="?attr/textAppearanceRegularMedium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textColor="?attr/colorForeground1"
                android:gravity="end"
                android:id="@+id/name_on_account_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:autoSizeTextType="uniform"
                style="?attr/textAppearanceRegularMedium"/>
        </LinearLayout>
        <View
            android:background="?attr/colorBackground3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/match_row"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:type="condensed"
            app:valueText="@string/acats_in_review_match_availability"
            style="?attr/dataCondensedRowContainerStyle"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorForeground2"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/acats_in_review_submit_button_text"
            android:layout_marginVertical="@dimen/rds_spacing_default"
            style="?attr/primaryMonochromeButtonStyle"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
