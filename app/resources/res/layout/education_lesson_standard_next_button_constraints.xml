<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/footer_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent">
    <com.robinhood.android.designsystem.button.RdsIconButton
        android:id="@+id/footer_back_button"
        android:visibility="visible"
        android:layout_width="@dimen/education_lesson_next_btn_size"
        android:layout_height="@dimen/education_lesson_next_btn_size"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.android.designsystem.button.RdsIconButton
        android:id="@+id/footer_next_button"
        android:visibility="visible"
        android:layout_width="@dimen/education_lesson_next_btn_size"
        android:layout_height="@dimen/education_lesson_next_btn_size"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.shared.education.p377ui.lessons.standard.EducationLessonStandardFooterCtaView
        android:id="@+id/footer_cta_buttons"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
