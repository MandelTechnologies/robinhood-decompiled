<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical">
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/direct_deposit_name"
        style="?attr/dataRowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_bank_name_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/direct_deposit_bank_name"
        style="?attr/dataRowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_routing_number_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/direct_deposit_routing_number"
        style="?attr/dataRowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_account_number_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/direct_deposit_account_number"
        style="?attr/dataRowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_amount_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/direct_deposit_amount"
        style="?attr/dataRowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_employer_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelText="@string/direct_deposit_employer"
        style="?attr/dataRowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsDataRowView
        android:id="@+id/direct_deposit_signature_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        app:labelText="@string/direct_deposit_signature"
        app:type="condensed"
        style="?attr/dataCondensedRowContainerStyle"/>
    <ImageView
        android:id="@+id/direct_deposit_signature"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:tint="?attr/colorForeground1"
        android:contentDescription="@string/direct_deposit_signature"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"/>
</merge>
