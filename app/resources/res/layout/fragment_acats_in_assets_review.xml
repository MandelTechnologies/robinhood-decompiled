<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <TextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:gravity="center_horizontal"
        android:id="@+id/assets_review_title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/acats_in_review_assets_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <HorizontalScrollView
        android:id="@+id/asset_type_chip_container"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assets_review_title">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/asset_type_chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:singleSelection="true">
            <com.robinhood.android.designsystem.chip.RdsChip
                android:id="@+id/all_assets_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acats_in_build_partial_all_assets_chip"
                style="?attr/actionMonochromeChipStyle"/>
            <com.robinhood.android.designsystem.chip.RdsChip
                android:id="@+id/cash_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acats_in_build_partial_cash_and_margin_chip"
                style="?attr/actionMonochromeChipStyle"/>
            <com.robinhood.android.designsystem.chip.RdsChip
                android:id="@+id/equity_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acats_in_build_partial_equity_chip"
                style="?attr/actionMonochromeChipStyle"/>
            <com.robinhood.android.designsystem.chip.RdsChip
                android:id="@+id/options_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acats_in_build_partial_options_chip"
                style="?attr/actionMonochromeChipStyle"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/asset_list"
        android:paddingBottom="@dimen/rds_spacing_small"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/cta_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/asset_type_chip_container"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/cta_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_confirm"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
