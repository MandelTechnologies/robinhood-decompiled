<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/alert_compose_view"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/order_price_header"
        android:paddingTop="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/rds_spacing_medium"
        android:paddingEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_compose_view">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:id="@+id/order_price_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/order_price_prompt_txt"
            android:paddingTop="@dimen/rds_spacing_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/order_price_price_label_txt"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/order_price_top_margin"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        android:labelFor="@+id/order_price_price_edt"
        app:layout_constraintEnd_toStartOf="@+id/order_price_price_dollar_prefix"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_price_header"
        app:layout_goneMarginTop="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textColor="?attr/colorForeground1"
        android:id="@+id/order_price_price_dollar_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ach_transfer_money_symbol"
        android:importantForAccessibility="no"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_price_price_label_txt"
        app:layout_constraintEnd_toStartOf="@+id/order_price_price_edt"
        app:layout_constraintStart_toEndOf="@+id/order_price_price_label_txt"
        style="@style/OrderTextNewDesign.InputField"/>
    <com.robinhood.android.common.p088ui.view.RhEditText
        android:textColor="?attr/colorForeground1"
        android:id="@+id/order_price_price_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="12"
        android:inputType="numberDecimal"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_price_price_label_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/order_price_price_dollar_prefix"
        app:useCustomNumpad="true"
        style="@style/OrderTextNewDesign.InputField">
        <requestFocus/>
    </com.robinhood.android.common.p088ui.view.RhEditText>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textSize="16sp"
        android:id="@+id/order_price_price_display_txt"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/order_price_price_label_txt"
        app:layout_constraintEnd_toEndOf="parent"/>
    <include
        android:id="@+id/order_price_price_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_price_price_label_txt"
        layout="@layout/include_rds_divider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/order_price_current_price_group"
        android:background="?attr/selectableItemBackground"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_price_price_divider">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/order_price_current_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/rds_spacing_xsmall"
            android:drawableEnd="@drawable/svg_ic_question"
            android:drawableTint="?attr/colorPrimary"/>
    </LinearLayout>
    <com.robinhood.android.designsystem.numpad.RdsNumpadContainerView
        android:id="@+id/order_price_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:buttonText="@string/general_label_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/numpadContainerStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
