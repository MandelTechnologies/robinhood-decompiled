<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/options_rolling_colored_background"
        android:background="@drawable/contract_card_fill"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorBackground2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/options_rolling_contract_card_group"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="             options_rolling_header,             options_rolling_card_title,             options_rolling_card_subtitle,             options_rolling_divider,             options_rolling_time_left_title,             options_rolling_time_left,             options_rolling_current_price_title,             options_rolling_current_price"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:id="@+id/options_rolling_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:text="@string/options_rolling_current_position_text"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularLargeBold"
        android:id="@+id/options_rolling_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_xxsmall"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_rolling_header"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/options_rolling_card_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_xxsmall"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_rolling_card_title"/>
    <View
        android:id="@+id/options_rolling_divider"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:backgroundTint="?attr/colorBackground3"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_rolling_card_subtitle"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/options_rolling_time_left_title"
        android:paddingTop="@dimen/rds_spacing_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:text="@string/options_rolling_time_left_title_text"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/options_rolling_time_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_rolling_divider"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/options_rolling_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_rolling_time_left_title"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/options_rolling_current_price_title"
        android:paddingTop="@dimen/rds_spacing_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/options_rolling_time_left_title"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/options_rolling_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:text="@string/general_label_n_a_short"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/options_rolling_time_left"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Group
        android:id="@+id/options_rolling_select_new_contract_group"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="options_rolling_plus_icon, options_rolling_select_new_contract"/>
    <ImageView
        android:id="@+id/options_rolling_plus_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:tint="?attr/colorPrimary"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/options_rolling_select_new_contract"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_rds_bubble_plus_24dp"/>
    <TextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="?attr/colorPrimary"
        android:id="@+id/options_rolling_select_new_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options_rolling_select_new_contract_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/options_rolling_plus_icon"/>
</merge>
