<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fragment_pin_auth_adt_unlock_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/twenty_four_hour_market_intro_lottie"/>
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/robinhood_logo"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginBottom="32dp"
            android:tint="?attr/colorPrimary"
            android:contentDescription="@null"/>
        <EditText
            android:id="@+id/input_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:alpha="0"/>
        <com.robinhood.android.common.p088ui.view.DotIndicators
            android:layout_gravity="center_horizontal"
            android:id="@+id/pinbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotColor="?attr/colorForeground1"
            app:dotRadius="5dp"
            app:dotSpacing="14dp"
            app:drawStyle="pinHollow"
            app:numDots="4"
            app:secondaryColor="?attr/colorPrimary"
            app:strokeWidth="2dp"/>
        <com.robinhood.android.designsystem.button.RdsTextButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/forgot_pin_cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_xxlarge"
            android:text="@string/auth_pin_forgot_pin_cta"
            style="?attr/textButtonStyle"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.robinhood.android.designsystem.numpad.RdsNumpadView
            android:id="@+id/numpad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:delimiterEnabled="false"
            app:includeLetters="true"
            style="?attr/numpadStyle"/>
    </LinearLayout>
</FrameLayout>
