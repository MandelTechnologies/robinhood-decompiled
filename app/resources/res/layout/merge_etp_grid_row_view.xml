<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/rds_spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/etp_item_color_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toBottomOf="@+id/etp_item_title"
            app:layout_constraintEnd_toStartOf="@+id/etp_item_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etp_item_title"
            app:srcCompat="@drawable/ic_color_block"
            app:tint="@color/mobius_prime"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textColor="?attr/colorForeground2"
            android:ellipsize="end"
            android:id="@+id/etp_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etp_item_color_block"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/textAppearanceRegularSmall"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/etp_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/etp_item_title"
            app:layout_constraintStart_toStartOf="@+id/etp_item_title"
            app:layout_constraintTop_toBottomOf="@+id/etp_item_title"
            style="?attr/textAppearanceRegularMedium"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
