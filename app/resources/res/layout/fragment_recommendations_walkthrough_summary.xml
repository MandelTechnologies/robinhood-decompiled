<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorBackgroundRecommendations"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?attr/colorBackground1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView
            android:orientation="vertical"
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toTopOf="@+id/continue_btn_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/background"
                    android:background="@drawable/bottom_rounded_corner_background"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:backgroundTint="?attr/colorBackgroundRecommendations"
                    app:layout_constraintBottom_toTopOf="@+id/list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayLarge"
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_medium"
                    android:layout_marginStart="@dimen/rds_spacing_medium"
                    android:layout_marginEnd="@dimen/rds_spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_small"
                    android:layout_marginStart="@dimen/rds_spacing_medium"
                    android:layout_marginEnd="@dimen/rds_spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title"/>
                <ImageView
                    android:id="@+id/podium_static"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/recs_walkthrough_summary_podium_height"
                    android:layout_marginBottom="@dimen/rds_spacing_small"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toTopOf="@+id/list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orb_static"/>
                <com.robinhood.android.recommendations.p224ui.walkthrough.RecommendationsPortfolioView
                    android:id="@+id/portfolio_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/rds_spacing_xlarge"
                    android:rotation="16"
                    app:layout_constraintBottom_toBottomOf="@+id/orb_static"
                    app:layout_constraintEnd_toEndOf="@+id/orb_static"
                    app:layout_constraintStart_toStartOf="@+id/orb_static"
                    app:layout_constraintTop_toTopOf="@+id/orb_static"/>
                <ImageView
                    android:id="@+id/orb_static"
                    android:layout_width="@dimen/recs_walkthrough_summary_image_width"
                    android:layout_height="@dimen/recs_walkthrough_summary_image_height"
                    android:layout_marginTop="@dimen/rds_spacing_default"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    app:layout_constraintBottom_toTopOf="@+id/podium_static"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_medium"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/orb_static"/>
                <com.robinhood.android.designsystem.banner.RdsInfoBannerView
                    android:id="@+id/banner"
                    android:layout_width="0dp"
                    android:layout_margin="@dimen/rds_spacing_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/list"
                    style="?attr/infoBannerStyle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView>
        <FrameLayout
            android:id="@+id/continue_btn_container"
            android:background="?attr/colorBackground1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <com.robinhood.android.designsystem.button.RdsButton
                android:id="@+id/continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_default"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:layout_marginStart="@dimen/rds_spacing_medium"
                android:layout_marginEnd="@dimen/rds_spacing_medium"
                style="?attr/primaryMonochromeButtonStyle"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
