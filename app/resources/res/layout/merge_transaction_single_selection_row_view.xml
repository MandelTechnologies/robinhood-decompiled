<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/transaction_single_selection_radio_button"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/compound_button_color_selector"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/transaction_single_selection_text_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="@dimen/rds_spacing_default"
            app:srcCompat="@drawable/radio_button"
            style="?attr/rowLeadingIconStyle"/>
        <com.robinhood.android.designsystem.row.component.RdsRowTextContainerView
            android:id="@+id/transaction_single_selection_text_container"
            android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/transaction_single_selection_metadata_container"
            app:layout_constraintStart_toEndOf="@+id/transaction_single_selection_radio_button"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/rowTextContainerStyle"/>
        <com.robinhood.android.designsystem.row.component.RdsRowMetadataContainerView
            android:id="@+id/transaction_single_selection_metadata_container"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rds_spacing_default"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/transaction_single_selection_text_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="@dimen/rds_spacing_default"
            style="?attr/rowMetadataContainerStyle"/>
        <include
            android:id="@+id/transaction_single_selection_bottom_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/include_rds_divider"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
