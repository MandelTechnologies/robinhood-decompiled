<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transfer_instant_deposit_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        app:layout_constraintBottom_toTopOf="@+id/disclosure_txt"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:lottie_rawRes="@raw/lottie_instant_deposit"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:gravity="center"
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
                android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
                android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
                style="?attr/textAppearanceDisplayMedium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:gravity="center"
                android:id="@+id/detail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
                android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
                style="?attr/textAppearanceRegularMedium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:gravity="center"
                android:id="@+id/additional_detail_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
                android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
                style="?attr/textAppearanceRegularMedium"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_bottom"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:adjustViewBounds="true"
                app:lottie_rawRes="@raw/lottie_instant_deposit"/>
        </LinearLayout>
    </ScrollView>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textColor="?attr/colorForeground2"
        android:gravity="center"
        android:id="@+id/disclosure_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/primary_btn"
        app:useLinkMovementMethod="true"
        style="?attr/textAppearanceRegularSmall"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/primary_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/gold_hook_btn"
        app:layout_goneMarginBottom="@dimen/rds_spacing_medium"
        style="?attr/primaryButtonStyle"/>
    <com.robinhood.android.serverclientcomponents.actionbutton.ClientComponentButtonView
        android:id="@+id/gold_hook_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
