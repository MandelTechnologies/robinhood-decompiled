<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crypto_order_toolbar_content"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textColor="?attr/colorForeground1"
        android:layout_gravity="center"
        android:id="@+id/review_order_text_view"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crypto_limit_order_reviewing_state_toolbar_title"
        android:layout_marginEnd="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.container.RdsRippleContainerView
        android:layout_gravity="end"
        android:id="@+id/action_order_types"
        android:background="?attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/rds_spacing_default"
        android:paddingEnd="@dimen/rds_spacing_default"
        app:rippleColor="?attr/colorRipple">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMediumBold"
            android:textColor="?attr/colorPositive"
            android:gravity="center_vertical"
            android:id="@+id/action_order_types_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="@dimen/rds_spacing_default"
            android:drawableEnd="@drawable/svg_ic_caret_down_8dp"
            android:drawableTint="?attr/colorPositive"/>
    </com.robinhood.android.designsystem.container.RdsRippleContainerView>
</FrameLayout>
