<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="?attr/colorForeground1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/question_multi_action_share_row"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        app:leadingIcon="@drawable/ic_rds_share_android_24dp"
        app:primaryText="@string/question_multi_action_share"
        app:showBottomDivider="true"
        style="?attr/rowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/question_multi_action_delete_row"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        app:leadingIcon="@drawable/ic_rds_trash_24dp"
        app:primaryText="@string/question_multi_action_delete"
        app:showBottomDivider="true"
        style="?attr/rowContainerStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/question_multi_action_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_button_top_spacing"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_button_top_spacing"
        android:text="@string/general_label_done"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        android:layout_marginVertical="@dimen/rds_button_top_spacing"
        style="?attr/primaryMonochromeButtonStyle"/>
</LinearLayout>
