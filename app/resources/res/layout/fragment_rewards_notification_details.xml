<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rewards_notification_details_animation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/rds_spacing_xxlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rewards_notification_details_see_order_button"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/rewards_notification_details_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.12"/>
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/rewards_notification_details_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.88"/>
        <ImageView
            android:id="@+id/rewards_notification_details_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:contentDescription="@null"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rds_robinhood_24dp"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmallBold"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_congrats"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:text="@string/rewards_notification_weekly_congrats"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_icon"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_bonus_rate"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_congrats"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_roundup"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:text="@string/rewards_notification_weekly_roundup"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_bonus_rate"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_roundup_amount"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/rewards_notification_details_roundup"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintTop_toTopOf="@+id/rewards_notification_details_roundup"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_bonus"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:text="@string/rewards_notification_weekly_bonus"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_roundup"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_bonus_amount"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/rewards_notification_details_bonus"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintTop_toTopOf="@+id/rewards_notification_details_bonus"/>
        <View
            android:id="@+id/rewards_notification_details_divider"
            android:background="?attr/colorBlack"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_bonus"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMediumBold"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_total"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_divider"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMediumBold"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_total_amount"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/rewards_notification_details_total"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintTop_toTopOf="@+id/rewards_notification_details_total"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorBlack"
            android:id="@+id/rewards_notification_details_disclaimer"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            app:layout_constraintEnd_toStartOf="@+id/rewards_notification_details_right_guideline"
            app:layout_constraintStart_toEndOf="@+id/rewards_notification_details_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/rewards_notification_details_total"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/rewards_notification_details_see_order_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/rewards_notification_weekly_see_order_details"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/rewards_notification_details_dismiss_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/secondaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:textColor="?attr/colorBlack"
        android:id="@+id/rewards_notification_details_dismiss_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_dismiss"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
