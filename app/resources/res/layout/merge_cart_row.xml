<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_gravity="top"
            android:id="@+id/row_top_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toTopOf="@+id/row_content_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/row_top_barrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="top"
                app:constraint_referenced_ids="row_caret,row_text_primary"/>
            <ViewStub
                android:id="@+id/row_caret"
                android:visibility="gone"
                android:layout="@layout/include_rds_row_caret"
                android:inflatedId="@+id/row_caret"
                app:layout_constraintBottom_toBottomOf="@+id/continue_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/continue_btn"
                app:layout_constraintWidth_min="36dp"
                style="?attr/rowCaretStyle"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMediumBold"
                android:id="@+id/row_text_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/row_caret"
                app:layout_constraintTop_toTopOf="@+id/row_top_barrier"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:id="@+id/row_text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/row_caret"
                app:layout_constraintTop_toBottomOf="@+id/row_text_primary"/>
            <com.robinhood.android.designsystem.button.RdsButton
                android:id="@+id/continue_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:text="@string/general_label_continue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/row_top_barrier"
                style="?attr/primaryButtonStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
