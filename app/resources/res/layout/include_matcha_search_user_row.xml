<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/row_background"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleColor="?attr/colorRippleBackground1">
    <com.robinhood.android.matcha.p177ui.search.MatchaSearchCheckBox
        android:id="@+id/select_transactor_checkbox"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/avatar_compose_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/avatar_compose_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginVertical="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/row_text_container"
        app:layout_constraintStart_toEndOf="@+id/select_transactor_checkbox"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.row.component.RdsRowTextContainerView
        android:id="@+id/row_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_compose_view"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/rowTextContainerStyle"/>
    <com.robinhood.android.designsystem.button.RdsIconButton
        android:id="@+id/info_button"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:tint="?attr/colorForeground1"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        android:backgroundTint="?attr/colorBackground1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_info_16dp"/>
    <com.robinhood.android.designsystem.progress.RdsProgressBar
        android:id="@+id/loading_view"
        android:visibility="gone"
        android:layout_width="@dimen/rds_spacing_medium"
        android:layout_height="@dimen/rds_spacing_medium"
        android:indeterminate="true"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/include_rds_divider"/>
</androidx.constraintlayout.widget.ConstraintLayout>
