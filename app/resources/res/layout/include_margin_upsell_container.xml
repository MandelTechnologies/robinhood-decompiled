<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/margin_upsell_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rds_spacing_medium">
    <com.robinhood.android.designsystem.pog.RdsPogView
        android:layout_gravity="center_horizontal"
        android:id="@+id/margin_upsell_pog"
        app:pictogram="@drawable/pict_mono_rds_margin"
        style="?attr/heroPogStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/margin_upsell_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textColor="?android:attr/textColorPrimary"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/margin_upsell_description_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/margin_upsell_get_started_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_large"
        android:text="@string/upsell_enable_margin_enable_button"
        style="?attr/primaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/margin_upsell_not_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginBottom="@dimen/rds_spacing_large"
        android:text="@string/general_label_not_now"
        style="?attr/secondaryMonochromeButtonStyle"/>
</LinearLayout>
