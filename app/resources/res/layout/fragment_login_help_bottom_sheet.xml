<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/login_help_bottom_sheet_container"
    android:padding="@dimen/rds_spacing_xsmall"
    android:paddingBottom="@dimen/rds_spacing_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/login_help_bottom_sheet_title"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/login_help_bottom_sheet_forgot_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_default"
        app:primaryText="@string/login_help_bottom_sheet_forgot_password"
        app:showBottomDivider="true"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/login_help_bottom_sheet_forgot_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_default"
        app:primaryText="@string/login_help_bottom_sheet_forgot_email"
        app:showBottomDivider="true"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/login_help_bottom_sheet_something_else_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_default"
        app:primaryText="@string/login_help_bottom_sheet_something_else"
        app:showBottomDivider="true"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_default"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginRight="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_large"
        android:text="@string/general_label_cancel"
        android:layout_marginHorizontal="@dimen/rds_spacing_default"
        style="?attr/secondaryMonochromeButtonStyle"/>
</LinearLayout>
