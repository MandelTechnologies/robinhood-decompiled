<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <View
        android:id="@+id/generic_actionable_info_loading_image"
        android:background="@drawable/generic_actionable_info_loading_rectangle_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginVertical="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toTopOf="@+id/generic_actionable_info_loading_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"/>
    <View
        android:id="@+id/generic_actionable_info_loading_title"
        android:background="@drawable/generic_actionable_info_loading_rectangle_background"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/generic_actionable_info_loading_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generic_actionable_info_loading_barrier2"
        app:layout_constraintVertical_bias="0"/>
    <View
        android:id="@+id/generic_actionable_info_loading_detail"
        android:background="@drawable/generic_actionable_info_loading_rectangle_background"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/generic_actionable_info_loading_primary_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generic_actionable_info_loading_title"
        app:layout_constraintVertical_bias="0"/>
    <View
        android:id="@+id/generic_actionable_info_loading_primary_action"
        android:background="@drawable/generic_actionable_info_loading_button_background"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/generic_actionable_info_loading_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/generic_actionable_info_loading_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="generic_actionable_info_loading_guideline, generic_actionable_info_loading_title"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/generic_actionable_info_loading_barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="generic_actionable_info_loading_barrier"/>
</androidx.constraintlayout.widget.ConstraintLayout>
