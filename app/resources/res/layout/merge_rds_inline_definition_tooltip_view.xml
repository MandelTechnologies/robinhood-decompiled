<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorBackground1"
        android:textColorHighlight="?attr/colorBackground3"
        android:textColorLink="?attr/colorBackground1"
        android:id="@+id/definition_txt"
        android:background="@drawable/rds_inline_definition_tooltip_background"
        android:paddingLeft="@dimen/rds_spacing_default"
        android:paddingTop="@dimen/rds_spacing_small"
        android:paddingRight="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_xsmall"
        android:importantForAccessibility="yes"
        android:backgroundTint="?attr/colorForeground1"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        android:layout_marginVertical="@dimen/rds_spacing_xsmall"
        android:paddingHorizontal="@dimen/rds_spacing_default"
        android:paddingVertical="@dimen/rds_spacing_small"
        app:useLinkMovementMethod="true"/>
</merge>
