<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:text="@string/tax_info_confirm_title"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                style="?attr/textAppearanceDisplayLarge"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_default"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:text="@string/tax_info_confirm_message"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                android:layout_marginVertical="@dimen/rds_spacing_default"
                style="?attr/textAppearanceRegularMedium"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/tax_info_name_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/tax_info_confirm_label_name"
                app:showBottomDivider="true"
                style="?attr/rowContainerStyle"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/tax_info_address_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/tax_info_confirm_label_address"
                app:showBottomDivider="true"
                style="?attr/DEPRECATED_rowCtaContainerStyle"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/tax_info_ssn_row"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/tax_info_confirm_label_ssn"
                app:showBottomDivider="true"
                style="?attr/rowContainerStyle"/>
        </LinearLayout>
    </ScrollView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/tax_info_confirm_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_button_top_spacing"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:text="@string/general_label_confirm"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        style="?attr/primaryButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/tax_info_update_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_button_top_spacing"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/tax_info_confirm_update_info"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        style="?attr/legacyGhostButtonStyle"/>
</LinearLayout>
