<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.equitydetail.p123ui.earnings.EarningsDataView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorBackground1"
    app:edv_color="?attr/colorPrimary">
    <com.robinhood.android.equitydetail.p123ui.earnings.EarningsGraph
        android:id="@+id/earnings_graph"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        style="@style/RhEarningsGraph"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_large"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/earnings_text_midpoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:id="@+id/earnings_estimated_eps_label_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrument_detail_earnings_estimated_eps_label"
            android:drawablePadding="@dimen/rds_spacing_small"
            android:drawableEnd="@drawable/eps_circle_positive"
            android:fontFamily="@font/capsule_sans_medium"
            app:layout_constraintBaseline_toBaselineOf="@+id/earnings_actual_eps_label_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/earnings_actual_eps_label_txt"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instrument_detail_earnings_actual_eps_label"
            android:drawablePadding="@dimen/rds_spacing_small"
            android:drawableEnd="@drawable/eps_circle_positive"
            android:fontFamily="@font/capsule_sans_medium"
            app:layout_constraintStart_toEndOf="@+id/earnings_text_midpoint"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/earnings_estimated_eps_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/earnings_actual_eps_txt"
            app:layout_constraintEnd_toStartOf="@+id/earnings_text_midpoint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/earnings_estimated_eps_label_txt"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/earnings_actual_eps_txt"
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/earnings_text_midpoint"
            app:layout_constraintTop_toBottomOf="@+id/earnings_actual_eps_label_txt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.robinhood.android.designsystem.button.RdsTextButton
        android:textColor="?attr/colorPrimary"
        android:layout_gravity="start"
        android:id="@+id/earnings_action_btn"
        android:paddingLeft="@dimen/rds_spacing_medium"
        android:paddingRight="@dimen/rds_spacing_medium"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:paddingHorizontal="@dimen/rds_spacing_medium"
        style="?attr/legacyGhostButtonStyle"/>
</com.robinhood.android.equitydetail.p123ui.earnings.EarningsDataView>
