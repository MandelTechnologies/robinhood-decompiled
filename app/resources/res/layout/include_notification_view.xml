<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.shared.cards.NotificationView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:scarlet_childContext="animatedAndInherit">
    <com.robinhood.android.designsystem.card.RdsCardView
        android:id="@+id/notificationview_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:minHeight="@dimen/card_height"
        android:layout_marginStart="@dimen/rds_spacing_small"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        style="?attr/cardStyle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/card_height">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/rds_spacing_default"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginRight="@dimen/rds_spacing_default"
                android:layout_marginBottom="@dimen/rds_spacing_small"
                android:layout_marginHorizontal="@dimen/rds_spacing_default"
                android:layout_marginVertical="@dimen/rds_spacing_small"
                layout="@layout/include_notification_view_content"/>
        </LinearLayout>
    </com.robinhood.android.designsystem.card.RdsCardView>
</com.robinhood.shared.cards.NotificationView>
