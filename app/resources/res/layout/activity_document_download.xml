<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.progress.RdsProgressBar
        android:id="@+id/loading_spinner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="?attr/indeterminateProgressStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="?attr/colorPrimary"
        android:gravity="center_horizontal"
        android:id="@+id/loading_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_large"
        android:layout_marginTop="@dimen/rds_spacing_large"
        android:layout_marginRight="@dimen/rds_spacing_large"
        android:text="@string/documents_downloading_status"
        android:layout_marginHorizontal="@dimen/rds_spacing_large"
        app:layout_constraintTop_toBottomOf="@+id/loading_spinner"/>
</androidx.constraintlayout.widget.ConstraintLayout>
