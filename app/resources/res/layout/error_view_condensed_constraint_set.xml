<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/error_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/error_title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/error_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/error_description_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_icon_img"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/error_description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/error_primary_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_title_txt"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/error_primary_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_button_top_spacing"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/error_secondary_btn"
        app:layout_constraintTop_toBottomOf="@+id/error_description_txt"
        app:layout_goneMarginBottom="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/error_secondary_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_primary_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>
