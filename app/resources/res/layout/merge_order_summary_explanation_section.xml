<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/title_txt"
        android:paddingLeft="@dimen/rds_spacing_default"
        android:paddingRight="@dimen/rds_spacing_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/rds_spacing_default"
        style="?attr/textAppearanceDisplaySmall"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:layout_gravity="start"
        android:id="@+id/description_txt"
        android:paddingLeft="@dimen/rds_spacing_default"
        android:paddingRight="@dimen/rds_spacing_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:paddingHorizontal="@dimen/rds_spacing_default"
        app:useLinkMovementMethod="true"
        style="?attr/textAppearanceRegularMedium"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"/>
</merge>
