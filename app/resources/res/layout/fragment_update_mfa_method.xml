<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingVertical="@dimen/rds_spacing_default">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_small"
            android:text="@string/update_mfa_method_title"
            android:paddingHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/update_mfa_method_subtitle"
            android:paddingHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.row.RdsRowView
            android:id="@+id/update_mfa_authenticator_app_row"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/update_mfa_method_authenticator_app"
            app:showBottomDivider="true"
            style="?attr/rowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsRowView
            android:id="@+id/update_mfa_text_message_row"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/update_mfa_method_text_message"
            app:showBottomDivider="true"
            style="?attr/rowContainerStyle"/>
    </LinearLayout>
</ScrollView>
