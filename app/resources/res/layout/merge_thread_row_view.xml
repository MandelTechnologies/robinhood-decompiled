<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/thread_avatar_sliver"
            android:background="@drawable/circle_background"
            android:layout_width="@dimen/thread_avatar_size"
            android:layout_height="@dimen/thread_avatar_size"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toStartOf="@+id/thread_avatar_container"
            app:layout_constraintTop_toTopOf="@+id/thread_avatar_container"/>
        <FrameLayout
            android:id="@+id/thread_avatar_container"
            android:layout_width="@dimen/thread_avatar_size"
            android:layout_height="@dimen/thread_avatar_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.robinhood.android.common.p088ui.AvatarView
                android:id="@+id/thread_avatar_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="?attr/avatarBackgroundColor"
                style="?attr/rowAvatarStyle"/>
            <ImageView
                android:id="@+id/thread_selected_view"
                android:background="@drawable/circle_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:contentDescription="@null"
                android:backgroundTint="?attr/avatarBackgroundColor"
                app:srcCompat="@drawable/svg_ic_check_24dp"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/thread_critical_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:contentDescription="@null"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="@+id/thread_avatar_container"
            app:layout_constraintTop_toTopOf="@+id/thread_avatar_container"
            app:scarlet_affectedAttributes="srcCompat"
            app:srcCompat="@drawable/svg_ic_critical_badge"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:ellipsize="end"
            android:id="@+id/thread_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginStart="@dimen/rds_spacing_default"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toTopOf="@+id/thread_subtitle_txt"
            app:layout_constraintEnd_toStartOf="@+id/thread_time_txt"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/thread_avatar_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/thread_subtitle_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/thread_time_txt"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/thread_title_txt"
            app:layout_constraintTop_toBottomOf="@+id/thread_title_txt"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:id="@+id/thread_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            app:layout_constrainedWidth="true"
            app:layout_constraintBaseline_toBaselineOf="@+id/thread_title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@+id/thread_title_txt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        layout="@layout/include_rds_divider"/>
</merge>
