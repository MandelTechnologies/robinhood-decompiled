<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/chip_min_height"
        android:paddingStart="@dimen/rds_spacing_small"
        android:paddingEnd="@dimen/rds_spacing_small">
        <ImageView
            android:id="@+id/chip_image_view"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chip_spacer_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/chipImageViewStyle"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:gravity="center"
            android:id="@+id/chip_text_view"
            android:duplicateParentState="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginBottom="@dimen/rds_spacing_small"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/chip_spacer_text_view"
            app:layout_constraintStart_toStartOf="@+id/chip_spacer_text_view"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/chipTextViewStyle"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/chip_spacer_text_view"
            android:visibility="invisible"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginBottom="@dimen/rds_spacing_small"
            android:layout_marginStart="@dimen/rds_spacing_small"
            android:layout_marginEnd="@dimen/rds_spacing_small"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chip_dropdown_image_view"
            app:layout_constraintStart_toEndOf="@+id/chip_image_view"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/chipTextViewStyle"/>
        <ImageView
            android:id="@+id/chip_dropdown_image_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/iconCaretDown16dp"
            style="?attr/chipDropdownImageViewStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
