<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/rds_spacing_medium"
    android:paddingEnd="@dimen/rds_spacing_medium"
    android:backgroundTint="?attr/colorBackground1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/drip_prop_continue_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayMedium"
                android:id="@+id/drip_prop_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drip_value_prop_header_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:id="@+id/drip_prop_summary_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:text="@string/drip_value_prop_header_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drip_prop_title_txt"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textColor="?attr/colorForeground1Inverse"
                android:gravity="center"
                android:id="@+id/drip_value_prop_automated_investment_icon"
                android:background="@drawable/inversed_circle_background"
                android:layout_width="@dimen/rds_spacing_medium"
                android:layout_height="@dimen/rds_spacing_medium"
                android:text="1"
                app:layout_constraintBottom_toBottomOf="@+id/drip_value_prop_automated_investment_row"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/drip_value_prop_automated_investment_row"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/drip_value_prop_automated_investment_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rds_spacing_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/drip_value_prop_automated_investment_icon"
                app:layout_constraintTop_toBottomOf="@+id/drip_prop_summary_txt"
                app:primaryText="@string/drip_value_prop_automated_investment_title"
                app:secondaryText="@string/drip_value_prop_automated_investment_description"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textColor="?attr/colorForeground1Inverse"
                android:gravity="center"
                android:id="@+id/drip_value_prop_pause_anytime_icon"
                android:background="@drawable/inversed_circle_background"
                android:layout_width="@dimen/rds_spacing_medium"
                android:layout_height="@dimen/rds_spacing_medium"
                android:text="2"
                app:layout_constraintBottom_toBottomOf="@+id/drip_value_prop_pause_anytime_row"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/drip_value_prop_pause_anytime_row"/>
            <com.robinhood.android.designsystem.row.RdsRowView
                android:id="@+id/drip_value_prop_pause_anytime_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rds_spacing_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/drip_value_prop_pause_anytime_icon"
                app:layout_constraintTop_toBottomOf="@+id/drip_value_prop_automated_investment_row"
                app:primaryText="@string/drip_value_prop_pause_anytime_title"
                app:secondaryText="@string/drip_value_prop_pause_anytime_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/drip_prop_continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryPositiveButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
