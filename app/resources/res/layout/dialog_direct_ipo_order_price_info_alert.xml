<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/rds_spacing_medium"
    android:paddingBottom="@dimen/rds_spacing_medium"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/rds_spacing_medium"
    style="?attr/dialogContainerStyle">
    <com.robinhood.android.designsystem.text.RhTextView
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.DirectIpoTotalCostRow"
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:gravity="center_horizontal"
        android:id="@+id/price_info_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        style="?attr/rowContainerStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.DirectIpoTotalCostRow"
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center_horizontal"
        android:id="@+id/price_info_alert_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:useLinkMovementMethod="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/price_info_alert_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:layout_gravity="center_horizontal"
        android:id="@+id/price_info_alert_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:text="@string/general_label_dismiss"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        style="?attr/primaryButtonStyle"/>
</LinearLayout>
