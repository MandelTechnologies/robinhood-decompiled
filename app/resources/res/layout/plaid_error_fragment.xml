<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/plaid_error_fragment_container"
    android:background="@color/plaid_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:id="@+id/plaid_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plaid_navigation_height">
        <ImageView
            android:id="@+id/plaid_close_icon"
            android:padding="@dimen/plaid_space_1x"
            android:layout_width="@dimen/plaid_navigation_height"
            android:layout_height="@dimen/plaid_navigation_height"
            android:src="@drawable/pl_icon_close_s1"
            android:contentDescription="@string/plaid_exit"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/plaid_space_4x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/plaid_space_4x"
            android:paddingEnd="@dimen/plaid_space_4x">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/error_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/plaid_header_height"
                android:layout_marginTop="@dimen/plaid_space_2x"
                android:src="@drawable/pl_illustration_scene_error"
                android:scaleType="centerInside"/>
            <TextView
                android:enabled="true"
                android:gravity="center"
                android:id="@+id/error_header"
                android:paddingBottom="@dimen/plaid_space_1x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plaid_space_1x"
                android:text="@string/plaid_error_internal_server_error_something_went_wrong"
                style="@style/PlaidText.H2.ExtraBold"/>
            <TextView
                android:enabled="true"
                android:gravity="center"
                android:id="@+id/error_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plaid_error_internal_server_error_try_again_later"
                style="@style/PlaidText.H5.Regular"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textSize="@dimen/plaid_h4_font_size"
                android:textColor="@color/plaid_white"
                android:gravity="center"
                android:id="@+id/exit_button"
                android:background="@drawable/plaid_primary_button_background"
                android:paddingLeft="@dimen/plaid_space_2x"
                android:paddingTop="@dimen/plaid_space_2x"
                android:paddingRight="@dimen/plaid_space_2x"
                android:paddingBottom="@dimen/plaid_space_2x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/plaid_space_2x"
                android:text="@string/plaid_error_internal_error_exit"
                android:textAllCaps="false"
                android:fontFamily="@font/plaid_cern_semibold"
                android:textAlignment="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
