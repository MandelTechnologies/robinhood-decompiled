<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/resume_application_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/fragment_resume_application_fund_scene"
    app:layout_underneathToolbar="true">
    <ImageView
        android:id="@+id/resume_application_fund_close_button"
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?attr/colorWhite"
        android:contentDescription="@string/resume_application_close_content_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_close_24dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceBookCoverSmall"
        android:gravity="center"
        android:id="@+id/resume_application_fund_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/resume_application_fund_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularLarge"
        android:gravity="center"
        android:id="@+id/resume_application_fund_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/resume_application_title_margin"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/resume_application_fund_timeline_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resume_application_fund_title"
        app:layout_constraintVertical_chainStyle="packed"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/resume_application_fund_timeline_wrapper"
        android:background="@drawable/resume_application_wrapper_background"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/resume_application_timeline_margin"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/resume_application_fund_disclaimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resume_application_fund_subtitle"
        app:layout_constraintVertical_chainStyle="packed">
        <com.robinhood.android.resumeapplication.ResumeApplicationTimelineRowView
            android:id="@+id/resume_application_fund_timeline_first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_xsmall"
            app:isCompleted="true"
            app:pictogram="@drawable/pict_mono_rds_piggy_bank"
            app:subtitleText="@string/resume_application_fund_add_funds_subtitle"
            app:titleText="@string/resume_application_fund_add_funds_title"/>
        <com.robinhood.android.resumeapplication.ResumeApplicationTimelineRowView
            android:id="@+id/resume_application_fund_timeline_second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_xsmall"
            app:isCompleted="false"
            app:pictogram="@drawable/pict_mono_rds_chart"
            app:subtitleText="@string/resume_application_fund_become_investor_subtitle"
            app:titleText="@string/resume_application_fund_become_investor_title"/>
    </LinearLayout>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorWhite"
        android:gravity="center"
        android:id="@+id/resume_application_fund_disclaimer"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/resume_application_fund_primary_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:textColor="?attr/colorBlack"
        android:id="@+id/resume_application_fund_primary_cta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/resume_application_fund_primary_cta"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.motion.widget.MotionLayout>
