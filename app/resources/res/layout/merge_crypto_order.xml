<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/crypto_order_header_compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/crypto_amount_row_container"
            android:paddingTop="@dimen/rds_spacing_default"
            android:paddingBottom="@dimen/rds_spacing_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:paddingVertical="@dimen/rds_spacing_default">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:textColor="?attr/colorForeground1"
                android:id="@+id/crypto_amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@+id/amount_edit_text"
                app:layout_constraintEnd_toStartOf="@+id/crypto_amount_edt"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.robinhood.shared.trade.crypto.views.edittext.CryptoAmountInputView
                android:gravity="end"
                android:id="@+id/crypto_amount_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/crypto_amount_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/crypto_amount_label"
                app:layout_constraintTop_toTopOf="@+id/crypto_amount_label">
                <requestFocus/>
            </com.robinhood.shared.trade.crypto.views.edittext.CryptoAmountInputView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/amount_row_compose_view"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/crypto_order_rows_compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="@dimen/rds_spacing_medium"
            android:layout_weight="1"/>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/accountSelectorComposeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toTopOf="@+id/crypto_review_txt_compose_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/crypto_review_txt_compose_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_small"/>
    </LinearLayout>
</merge>
