<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/swipe_hint"
    android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent">
    <ImageView
        android:id="@+id/submit_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?attr/colorWhite"
        android:contentDescription="@string/crypto_order_review_swipe_to_submit_prompt"
        android:importantForAccessibility="no"
        app:srcCompat="?attr/iconCaretUp16dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textColor="?attr/colorWhite"
        android:id="@+id/swipe_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crypto_order_review_swipe_to_submit_prompt"
        app:shadowRadiusInDp="@dimen/crypto_font_glow_radius"
        style="?attr/textAppearanceRegularLargeBold"/>
</LinearLayout>
