<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:id="@+id/reward_detail_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/reward_detail_subheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_xsmall"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            app:labelText="@string/referral_detail_state_label"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/referral_detail_date_label"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/referral_detail_subtitle"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_reward_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/referral_detail_reward_value_label"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_backup_withholding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/referral_detail_backup_withholding_label"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_net_credit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/referral_detail_net_credit_label"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsDataRowView
            android:id="@+id/reward_detail_cost_value"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:labelText="@string/referral_detail_cost_label"
            app:valueText="@string/referral_detail_cost_free"
            style="?attr/dataRowContainerStyle"/>
        <com.robinhood.android.designsystem.banner.RdsInfoBannerView
            android:id="@+id/reward_claim_banner"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            android:text="@string/stock_reward_claim_title"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            app:icon="@drawable/ic_rds_gift_24dp"
            style="?attr/infoBannerStyle"/>
    </LinearLayout>
</ScrollView>
