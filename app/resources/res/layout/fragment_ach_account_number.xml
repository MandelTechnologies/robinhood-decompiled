<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:id="@+id/subtitle_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:layout_marginBottom="@dimen/rds_spacing_medium"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                android:transitionName="@string/ach_transition_manual_ach_subtitle"/>
            <com.robinhood.android.common.view.RhTextInputLayout
                android:id="@+id/account_number_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                style="@style/RhTextInputLayout">
                <com.robinhood.android.common.p088ui.view.RhEditText
                    android:id="@+id/account_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ach_create_account_number_hint"
                    android:lines="1"
                    android:maxLength="17"
                    android:inputType="number"
                    app:useCustomNumpad="true">
                    <requestFocus/>
                </com.robinhood.android.common.p088ui.view.RhEditText>
            </com.robinhood.android.common.view.RhTextInputLayout>
            <com.robinhood.android.common.view.RhTextInputLayout
                android:id="@+id/verify_account_number_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                style="@style/RhTextInputLayout">
                <com.robinhood.android.common.p088ui.view.RhEditText
                    android:id="@+id/verify_account_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ach_create_verify_account_number_hint"
                    android:lines="1"
                    android:maxLength="17"
                    android:inputType="number"
                    app:useCustomNumpad="true"/>
            </com.robinhood.android.common.view.RhTextInputLayout>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/include_numpad_with_fab"/>
</LinearLayout>
