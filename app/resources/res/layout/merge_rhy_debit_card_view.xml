<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rhy_debit_card_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/rhy_debit_card_top_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="@dimen/rhy_debit_card_animation_top_margin"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/rhy_debit_card_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_begin="@dimen/rhy_debit_card_animation_horizontal_margin"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/rhy_debit_card_end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_end="@dimen/rhy_debit_card_animation_horizontal_margin"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rhy_debit_card_back_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rhy_overview_card_back_overlay_bottom_margin"
        android:layout_marginStart="@dimen/rhy_overview_card_back_overlay_start_margin"
        app:layout_constraintBottom_toBottomOf="@+id/rhy_debit_card_animation"
        app:layout_constraintEnd_toEndOf="@+id/rhy_debit_card_animation"
        app:layout_constraintStart_toStartOf="@+id/rhy_debit_card_animation"
        app:layout_constraintVertical_bias="1">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayLarge"
            android:textColor="?attr/colorWhite"
            android:gravity="start"
            android:id="@+id/rhy_debit_card_view_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capsule_sans_display_medium"
            app:layout_constraintBottom_toTopOf="@+id/rhy_debit_card_view_last_name"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayLarge"
            android:textColor="?attr/colorWhite"
            android:gravity="start"
            android:id="@+id/rhy_debit_card_view_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capsule_sans_display_medium"
            app:layout_constraintBottom_toTopOf="@+id/rhy_debit_card_view_card_number_placeholder"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorWhite"
            android:gravity="start"
            android:id="@+id/rhy_debit_card_view_card_number_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rhy_debit_card_number_placeholder"
            android:fontFamily="@font/capsule_sans_text_mono"
            android:layout_marginEnd="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toTopOf="@+id/rhy_debit_card_view_expiration_label"
            app:layout_constraintStart_toStartOf="@+id/rhy_debit_card_view_last_name"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorWhite"
            android:gravity="start"
            android:id="@+id/rhy_debit_card_view_expiration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rhy_debit_card_exp_label"
            android:textAllCaps="true"
            android:fontFamily="@font/capsule_sans_text_mono"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rhy_debit_card_view_last_name"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorWhite"
            android:gravity="start"
            android:id="@+id/rhy_debit_card_view_expiration_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_small"
            android:layout_marginRight="@dimen/rds_spacing_small"
            android:text="@string/rhy_debit_card_exp_pleceholder"
            android:fontFamily="@font/capsule_sans_text_mono"
            android:layout_marginHorizontal="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rhy_debit_card_view_expiration_label"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorWhite"
            android:id="@+id/rhy_debit_card_view_cvv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rhy_debit_card_cvv_label"
            android:textAllCaps="true"
            android:fontFamily="@font/capsule_sans_text_mono"
            android:layout_marginEnd="@dimen/rds_spacing_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rhy_debit_card_view_cvv_placeholder"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorWhite"
            android:id="@+id/rhy_debit_card_view_cvv_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rhy_debit_card_cvv_placeholder"
            android:fontFamily="@font/capsule_sans_text_mono"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rhy_debit_card_view_card_number_placeholder"/>
        <ImageView
            android:id="@+id/rhy_debit_card_view_number_image"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@string/rhy_card_settings_show_card_number_content_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rhy_debit_card_header_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/rhy_debit_card_end_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_debit_card_start_guideline"
        app:layout_constraintTop_toTopOf="@+id/rhy_debit_card_top_guideline">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorBlack"
            android:gravity="center_horizontal"
            android:id="@+id/rhy_debit_card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rhy_debit_card_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/dots_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="?attr/colorBlack"
            android:contentDescription="@string/rhy_debit_card_dots_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rds_dots_24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
