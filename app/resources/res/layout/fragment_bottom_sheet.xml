<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/rds_spacing_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?attr/bottomSheetStyle">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/bottom_sheet_rule_line"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="?attr/colorRuleLine"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_img_container"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/bottom_sheet_img_container"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_title_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_rule_line">
            <ImageView
                android:id="@+id/bottom_sheet_icon_img"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"/>
            <com.robinhood.android.designsystem.pog.RdsPogView
                android:id="@+id/bottom_sheet_pictogram"
                android:visibility="gone"
                style="?attr/heroPogStyle"/>
        </FrameLayout>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            android:textColor="?attr/colorForeground1"
            android:gravity="center"
            android:id="@+id/bottom_sheet_title_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_subtitle_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_img_container"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorForeground2"
            android:gravity="center"
            android:id="@+id/bottom_sheet_subtitle_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_xsmall"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_description_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_title_txt"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="?attr/colorForeground1"
            android:textColorLink="?attr/colorPrimary"
            android:gravity="center"
            android:id="@+id/bottom_sheet_description_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            app:layout_constraintBottom_toTopOf="@+id/composable_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_subtitle_txt"
            app:useLinkMovementMethod="true"/>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/composable_view"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_primary_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_description_txt"/>
        <ViewStub
            android:id="@+id/bottom_sheet_primary_btn"
            android:inflatedId="@+id/bottom_sheet_primary_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_secondary_btn"
            app:layout_constraintTop_toBottomOf="@+id/composable_view"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/bottom_sheet_secondary_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
            android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_primary_btn"
            style="?attr/secondaryButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
