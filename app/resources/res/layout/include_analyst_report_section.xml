<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.common.view.RhCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="?attr/surfaceTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/rds_spacing_small"
    android:layout_marginEnd="@dimen/rds_spacing_small"
    android:backgroundTint="?attr/colorBackground1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/analyst_reports_section_icon_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="?android:attr/textColorPrimary"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/analyst_reports_section_caret_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="?attr/colorForeground3"
            android:contentDescription="@string/content_description_expand_collapse_caret"
            android:rotation="180"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/svg_ic_caret"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/analyst_reports_section_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toBottomOf="@+id/analyst_reports_section_icon_img"
            app:layout_constraintStart_toEndOf="@+id/analyst_reports_section_icon_img"
            app:layout_constraintTop_toTopOf="@+id/analyst_reports_section_icon_img"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/analyst_reports_section_body_txt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/analyst_reports_section_title_txt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.robinhood.android.common.view.RhCardView>
