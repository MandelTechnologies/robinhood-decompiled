<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/background_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/mid_layer_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lighthouse_light_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/foreground_lottie_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textSize="44sp"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_large"
        android:layout_marginRight="@dimen/rds_spacing_large"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:lineSpacingExtra="4sp"
        android:fontFamily="@font/nib_pro_book_cover_light"
        android:layout_marginHorizontal="@dimen/rds_spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center"
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_large"
        android:layout_marginRight="@dimen/rds_spacing_large"
        android:layout_marginBottom="@dimen/rds_spacing_xxlarge"
        android:layout_marginHorizontal="@dimen/rds_spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/bottom_row_barrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottom_row_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="page_turner,cta_button"/>
    <com.robinhood.utils.p409ui.view.SpeedLimitedScrollView
        android:id="@+id/scroll_view"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/scroll_container_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.robinhood.utils.p409ui.view.SpeedLimitedScrollView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/cta_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_xlarge"
        android:text="@string/option_watchlist_onboarding_cta"
        android:alpha="0"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsIconButton
        android:id="@+id/page_turner"
        android:layout_marginBottom="@dimen/rds_spacing_xlarge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/iconArrowDown16dp"
        style="?attr/primaryIconHeroMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
