<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/fragment_rh_list_header_illustration"
        android:paddingTop="@dimen/rds_spacing_default"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_header_illustration_height"
        android:contentDescription="@string/list_illustration_content_description"
        app:layout_constraintBottom_toTopOf="@+id/fragment_rh_list_new_chip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.google.android.material.chip.Chip
        android:textAppearance="?attr/textAppearanceRegularSmallBold"
        android:textColor="?attr/colorForeground1Inverse"
        android:id="@+id/fragment_rh_list_new_chip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:text="@string/curated_list_new"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:chipBackgroundColor="?attr/colorForeground1"
        app:chipEndPadding="12dp"
        app:chipIcon="@drawable/ic_rds_star_filled_16dp"
        app:chipIconSize="14dp"
        app:chipIconTint="?attr/colorForeground1Inverse"
        app:iconStartPadding="9dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_rh_list_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rh_list_header_illustration"
        app:layout_goneMarginTop="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayLarge"
        android:textColor="?attr/colorForeground1"
        android:id="@+id/fragment_rh_list_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/fragment_rh_list_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rh_list_new_chip"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:id="@+id/fragment_rh_list_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:drawablePadding="@dimen/rds_spacing_xsmall"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        android:drawableTint="?attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/fragment_rh_list_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rh_list_title"/>
    <com.robinhood.android.designsystem.inlinedefinition.RdsInlineDefinitionTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textColor="?attr/colorForeground1"
        android:textColorHighlight="?attr/colorBackground2"
        android:textColorLink="?android:attr/textColorSecondary"
        android:id="@+id/fragment_rh_list_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/fragment_rh_list_bottom_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rh_list_subtitle"
        app:layout_goneMarginTop="@dimen/rds_spacing_small"/>
    <Space
        android:id="@+id/fragment_rh_list_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_rh_list_description"/>
</merge>
