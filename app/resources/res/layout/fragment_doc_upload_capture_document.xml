<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:gravity="center"
        android:id="@+id/capture_photo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center"
        android:id="@+id/capture_photo_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capture_photo_title"/>
    <com.robinhood.android.designsystem.button.RdsTextButton
        android:id="@+id/capture_photo_requirements_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capture_photo_subtitle"
        style="?attr/textButtonStyle"/>
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toTopOf="@+id/capture_photo_primary_cta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/capture_photo_requirements_btn"/>
    <com.robinhood.android.doc.p109ui.photo.CameraOverlayView
        android:id="@+id/camera_overlay_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/rds_spacing_default"
        app:frameColor="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/camera_preview_view"/>
    <com.robinhood.android.designsystem.button.RdsIconButton
        android:id="@+id/capture_photo_primary_cta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rds_spacing_default"
        android:tint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_camera_button"
        style="?attr/primaryIconHeroButtonStyle"/>
    <com.robinhood.android.designsystem.progress.RdsProgressBar
        android:id="@+id/capture_photo_progress_circle"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="@+id/camera_preview_view"
        app:layout_constraintEnd_toEndOf="@+id/camera_preview_view"
        app:layout_constraintStart_toStartOf="@+id/camera_preview_view"
        app:layout_constraintTop_toTopOf="@+id/camera_preview_view"/>
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?attr/colorPrimary"
        android:contentDescription="@string/doc_upload_capture_photo_flash_content_description"
        app:layout_constraintBottom_toBottomOf="@+id/capture_photo_primary_cta"
        app:layout_constraintEnd_toStartOf="@+id/capture_photo_primary_cta"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/capture_photo_primary_cta"
        app:srcCompat="@drawable/ic_flash_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>
