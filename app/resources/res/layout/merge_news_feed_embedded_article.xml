<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_feed_embedded_article_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/news_feed_embedded_article_lightning_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:tint="?android:attr/textColorPrimary"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_lightning_12dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmallBold"
        android:id="@+id/news_feed_embedded_article_source_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="@+id/news_feed_embedded_article_lightning_img"
        app:layout_constraintStart_toEndOf="@+id/news_feed_embedded_article_lightning_img"
        app:layout_constraintTop_toTopOf="@+id/news_feed_embedded_article_lightning_img"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:id="@+id/news_feed_embedded_article_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_xsmall"
        app:layout_constraintBaseline_toBaselineOf="@+id/news_feed_embedded_article_source_txt"
        app:layout_constraintStart_toEndOf="@+id/news_feed_embedded_article_source_txt"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:ellipsize="end"
        android:id="@+id/news_feed_embedded_article_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:maxLines="3"
        android:minLines="2"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toStartOf="@+id/news_feed_embedded_article_preview_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_feed_embedded_article_source_txt"/>
    <ImageView
        android:id="@+id/news_feed_embedded_article_preview_img"
        android:background="@drawable/news_feed_image_background"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_feed_embedded_article_title_txt"
        app:layout_constraintTop_toTopOf="@+id/news_feed_embedded_article_title_txt"/>
    <ImageView
        android:id="@+id/news_feed_embedded_article_hero_preview_img"
        android:background="@drawable/news_feed_image_background"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:backgroundTint="?attr/colorBackground3"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.newsfeed.p200ui.NewsFeedRelatedInstrumentsView
        android:id="@+id/news_feed_embedded_article_related_instruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_feed_embedded_article_title_txt"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/news_feed_embedded_article_bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="news_feed_embedded_article_title_txt,news_feed_embedded_article_preview_img"/>
    <Space
        android:id="@+id/news_feed_embedded_article_bottom_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/rds_spacing_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_feed_embedded_article_bottom_barrier"/>
    <include
        android:id="@+id/news_feed_embedded_article_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/include_rds_divider"/>
</androidx.constraintlayout.widget.ConstraintLayout>
