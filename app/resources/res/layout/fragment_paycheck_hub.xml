<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <androidx.core.widget.NestedScrollView
        android:paddingTop="@dimen/rds_spacing_medium"
        android:paddingBottom="@dimen/rds_spacing_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/setup_direct_deposit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayLarge"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_paycheck"
                android:paddingHorizontal="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayLarge"
                android:id="@+id/last_paycheck_amount"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/rds_spacing_medium"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_xsmall"
                android:paddingHorizontal="@dimen/rds_spacing_medium">
                <ImageView
                    android:id="@+id/paycheck_hub_subtitle_early_pay_icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="?attr/colorPositive"
                    android:contentDescription="@null"
                    android:layout_marginEnd="@dimen/rds_spacing_xsmall"
                    app:srcCompat="@drawable/ic_rds_checkmark_16dp"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularSmall"
                    android:textColor="?attr/colorForeground2"
                    android:id="@+id/paycheck_hub_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.robinhood.android.designsystem.banner.RdsInfoBannerView
                android:id="@+id/paycheck_hub_banner"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                style="?attr/infoBannerStyle"/>
            <com.robinhood.android.paycheckhub.p213ui.PaycheckDistributionView
                android:id="@+id/paycheck_distribution_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.robinhood.android.designsystem.button.RdsTextButton
                android:layout_gravity="start"
                android:id="@+id/paycheck_recurring_investments_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_default"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:layout_marginStart="@dimen/rds_spacing_medium"
                android:layout_marginVertical="@dimen/rds_spacing_default"
                style="?attr/textButtonStyle"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
                android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
                layout="@layout/include_rds_divider"/>
            <androidx.compose.p011ui.platform.ComposeView
                android:id="@+id/set_up_ira_card"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayMedium"
                android:id="@+id/paycheck_history_title"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:text="@string/paycheck_history_title"
                android:paddingHorizontal="@dimen/rds_spacing_medium"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/paycheck_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_small"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.robinhood.android.designsystem.button.RdsButton
                android:layout_gravity="start"
                android:id="@+id/show_all_paychecks_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:text="@string/general_label_show_all"
                style="?attr/legacyGhostButtonStyle"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/setup_direct_deposit_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        android:layout_marginVertical="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
