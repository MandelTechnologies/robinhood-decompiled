<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayMedium"
                android:gravity="center_horizontal"
                android:id="@+id/persona_start_title"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingTop="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/persona_start_selfie_title"
                android:paddingHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:gravity="center_horizontal"
                android:id="@+id/persona_start_subtitle"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/persona_start_selfie_subtitle"
                android:paddingHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/persona_start_title"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/persona_start_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/persona_start_disclosure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="240dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/persona_start_subtitle"
                app:srcCompat="@drawable/selfie_hero"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/persona_start_animation"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                app:layout_constraintBottom_toTopOf="@+id/persona_start_disclosure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_max="240dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/persona_start_subtitle"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularSmall"
                android:textColor="?android:attr/textColorSecondary"
                android:textColorLink="?android:attr/textColorSecondary"
                android:gravity="center_horizontal"
                android:id="@+id/persona_start_disclosure"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingTop="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/rds_spacing_medium"
                android:paddingVertical="@dimen/rds_spacing_default"
                app:layout_constraintBottom_toTopOf="@+id/persona_start_primary_cta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:useLinkMovementMethod="true"/>
            <com.robinhood.android.designsystem.button.RdsButton
                android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Achromatic"
                android:id="@+id/persona_start_primary_cta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginBottom="@dimen/rds_spacing_small"
                android:text="@string/persona_start_selfie_primary_cta_text"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintBottom_toTopOf="@+id/persona_start_secondary_cta"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="?attr/primaryButtonStyle"/>
            <com.robinhood.android.designsystem.button.RdsButton
                android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Achromatic"
                android:id="@+id/persona_start_secondary_cta"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:text="@string/persona_start_photo_id_gdpr_secondary_cta_text"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="?attr/secondaryButtonStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <Space
        android:id="@+id/persona_filled_button_space"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rds_spacing_small"/>
</LinearLayout>
