<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.robinhood.android.designsystem.banner.RdsInfoBannerView
        android:id="@+id/top_info_banner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        style="?attr/infoBannerStyle"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/news_feed_header_txt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/news_feed_header_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news_feed_header_title_us"
            android:layout_marginEnd="@dimen/rds_spacing_small"
            style="@style/PageHeader.DesignSystem"/>
        <com.robinhood.android.designsystem.button.RdsIconButton
            android:id="@+id/news_feed_header_info_btn"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="?attr/colorForeground2"
            app:srcCompat="@drawable/ic_rds_info_24dp"/>
    </LinearLayout>
    <Space
        android:id="@+id/news_feed_header_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_toolbar_height_on_browse"
        android:layout_marginBottom="@dimen/rds_spacing_large"/>
</merge>
