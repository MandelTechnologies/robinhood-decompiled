<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.pog.RdsPogView
            android:layout_gravity="center_horizontal"
            android:id="@+id/device_details_pog_view"
            android:layout_marginTop="@dimen/rds_spacing_small"
            app:pictogram="@drawable/pict_mono_rds_phone"
            style="?attr/heroPogStyle"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:gravity="center"
            android:id="@+id/device_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            android:layout_marginVertical="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.row.RdsRowView
            android:id="@+id/device_details_last_seen_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/device_details_last_seen"
            app:showBottomDivider="true"
            style="?attr/rowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsRowView
            android:id="@+id/device_details_location_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/device_details_location"
            app:showBottomDivider="true"
            style="?attr/rowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsRowView
            android:id="@+id/device_details_device_type_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryText="@string/device_details_device_type"
            app:showBottomDivider="true"
            style="?attr/rowContainerStyle"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/device_details_remove_device_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_large"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_large"
            android:text="@string/device_details_remove_device"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            android:layout_marginVertical="@dimen/rds_spacing_large"
            style="?attr/secondaryNegativeButtonStyle"/>
    </LinearLayout>
</ScrollView>
