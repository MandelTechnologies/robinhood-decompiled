<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_underneathToolbar="true">
    <ImageView
        android:id="@+id/options_strategy_builder_nux_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/legacy_green"/>
    <View
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="?attr/colorBackground1Inverse"
        app:layout_constraintTop_toBottomOf="@+id/options_strategy_builder_nux_img"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cta_button_barrier"
        app:layout_constraintTop_toBottomOf="@+id/options_strategy_builder_nux_img">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium">
            <com.robinhood.android.designsystem.infotag.RdsInfoTag
                android:id="@+id/options_strategy_builder_coming_soon_chip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:text="@string/options_strategy_builder_coming_soon"
                app:tagIcon="@drawable/ic_rds_clock_16dp"
                app:tagType="inline"/>
            <TextView
                android:textAppearance="?attr/textAppearanceDisplayMedium"
                android:id="@+id/options_strategy_builder_nux_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:id="@+id/options_strategy_builder_nux_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_small"
                android:layout_marginBottom="@dimen/rds_spacing_default"/>
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/cta_button_barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="content_divider, options_strategy_builder_nux_cta"/>
    <View
        android:id="@+id/content_divider"
        android:background="#fff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:backgroundTint="?attr/colorBackground3"
        app:layout_constraintBottom_toTopOf="@+id/options_strategy_builder_nux_cta"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/options_strategy_builder_nux_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/options_strategy_builder_nux_upgrade_cta"
        style="?attr/primaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/options_strategy_builder_nux_upgrade_cta"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/options_strategy_builder_nux_upgrade_btn_text"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/options_strategy_builder_bottom_space"
        style="?attr/secondaryMonochromeButtonStyle"/>
    <Space
        android:id="@+id/options_strategy_builder_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
