<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.robinhood.android.designsystem.progress.RdsProgressBar
        android:layout_gravity="bottom"
        android:id="@+id/progress_checklist_row_progress_bar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:indeterminate="true"
        android:indeterminateOnly="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.AppCompat.ProgressBar"/>
    <ImageView
        android:id="@+id/progress_checklist_row_img"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="@+id/progress_checklist_row_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/progress_checklist_row_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/progress_checklist_row_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/progress_checklist_row_progress_bar"
        app:srcCompat="@drawable/svg_ic_check_circle_24dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/progress_checklist_row_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progress_checklist_row_progress_bar"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/progress_checklist_row_message_txt"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="@+id/progress_checklist_row_title_txt"
        app:layout_constraintStart_toStartOf="@+id/progress_checklist_row_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/progress_checklist_row_title_txt"
        app:useLinkMovementMethod="true"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/progress_checklist_row_button_positive"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_checklist_row_message_txt"
        style="?attr/legacyGhostButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/progress_checklist_row_button_negative"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        app:layout_constraintEnd_toStartOf="@+id/progress_checklist_row_button_positive"
        app:layout_constraintTop_toBottomOf="@+id/progress_checklist_row_message_txt"
        app:layout_goneMarginEnd="0dp"
        style="?attr/legacyGhostButtonStyle"/>
</merge>
