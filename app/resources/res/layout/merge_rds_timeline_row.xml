<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/timeline_row_top_connector"
        android:background="#fff"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/timeline_row_status_icon"
        app:layout_constraintEnd_toEndOf="@+id/timeline_row_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/timeline_row_bottom_connector"
        android:background="#fff"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timeline_row_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeline_row_status_icon"/>
    <ImageView
        android:id="@+id/timeline_row_status_icon"
        android:background="@null"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="24dp"
        android:maxHeight="24dp"
        android:tint="?attr/colorBackground3"
        android:contentDescription="@null"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/timeline_row_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/timeline_row_incomplete_icon"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/timeline_row_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="24dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/timeline_row_primary_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toTopOf="@+id/timeline_row_secondary_container"
        app:layout_constraintEnd_toStartOf="@+id/timeline_row_cta_button"
        app:layout_constraintStart_toEndOf="@+id/timeline_row_guideline"
        app:layout_constraintTop_toTopOf="@+id/timeline_row_status_icon"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_goneMarginEnd="0dp">
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/timeline_row_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/rds_spacing_xsmall"
            style="?attr/timelineRowPrimaryTextStyle"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/timeline_row_secondary_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/timeline_row_helper_button"
        app:layout_constraintEnd_toEndOf="@+id/timeline_row_primary_container"
        app:layout_constraintStart_toStartOf="@+id/timeline_row_primary_container"
        app:layout_constraintTop_toBottomOf="@+id/timeline_row_primary_container">
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/timeline_row_timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/timelineRowSecondaryTextStyle"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/timeline_row_secondary_text_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeline_secondary_text_separator"
            android:layout_marginStart="@dimen/rds_spacing_xsmall"
            android:layout_marginEnd="@dimen/rds_spacing_xsmall"
            style="?attr/timelineRowSecondaryTextStyle"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:id="@+id/timeline_row_metadata_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:drawablePadding="@dimen/rds_spacing_xsmall"
            android:drawableTint="?attr/colorForeground2"
            style="?attr/timelineRowSecondaryTextStyle"/>
    </LinearLayout>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/timeline_row_helper_button"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/timeline_row_status_icon"
        app:layout_constraintEnd_toEndOf="@+id/timeline_row_primary_container"
        app:layout_constraintStart_toStartOf="@+id/timeline_row_primary_container"
        app:layout_constraintTop_toBottomOf="@+id/timeline_row_secondary_container"
        style="?attr/timelineRowHelperButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsTextButton
        android:id="@+id/timeline_row_cta_button"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.55"
        style="?attr/timelineRowCtaButtonStyle"/>
</merge>
