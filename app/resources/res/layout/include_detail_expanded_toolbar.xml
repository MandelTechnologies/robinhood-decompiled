<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/expanded_toolbar"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/toolbar_title_offset_margin"
    android:layout_marginEnd="@dimen/rds_spacing_default"
    app:layout_constraintTop_toBottomOf="@+id/toolbar">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textSize="14sp"
        android:textColor="@color/rh_white_1"
        android:id="@+id/expanded_toolbar_subtitle_txt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:textSize="22sp"
        android:textColor="@color/rh_white_1"
        android:id="@+id/expanded_toolbar_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
