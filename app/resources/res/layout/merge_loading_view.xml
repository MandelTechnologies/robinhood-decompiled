<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/loading_view_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="center"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/general_status_loading"
            app:srcCompat="0x7f08043c"/>
        <com.robinhood.android.designsystem.progress.RdsProgressBar
            android:id="@+id/loading_view_progress_bar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/indeterminate_progress_bar"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/rh_white_1"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textSize="16sp"
            android:textColor="@color/text_color_white_with_normal_stale"
            android:id="@+id/loading_view_msg_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/loading_view_progress_bar"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/capsule_sans_medium"/>
    </RelativeLayout>
</merge>
