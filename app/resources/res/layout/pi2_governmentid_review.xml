<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/camera_screen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">
            <CheckBox
                android:id="@+id/animations_played"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <ImageView
                android:id="@+id/review_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/pi2_governmentid_review_content_description"
                app:layout_constraintBottom_toTopOf="@+id/flow_layout"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title"/>
            <com.withpersona.sdk2.inquiry.governmentid.view.SpotlightView
                android:id="@+id/spotlight_view"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pi2Radius="8dp"
                app:pi2Target="@+id/overlay"/>
            <View
                android:id="@+id/overlay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/overlay_hint"
                app:layout_constraintEnd_toEndOf="@+id/overlay_hint"
                app:layout_constraintStart_toStartOf="@+id/overlay_hint"
                app:layout_constraintTop_toTopOf="@+id/overlay_guide"/>
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:accessibilityLiveRegion="polite"
                app:autoSizeMinTextSize="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navigation_bar"
                style="?attr/textAppearanceHeadline6"/>
            <ImageView
                android:gravity="center"
                android:id="@+id/overlay_guide"
                android:padding="8dp"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toTopOf="@+id/overlay_hint"
                app:layout_constraintEnd_toEndOf="@+id/overlay_hint"
                app:layout_constraintStart_toStartOf="@+id/overlay_hint"
                app:layout_constraintTop_toTopOf="@+id/review_image"
                app:layout_constraintVertical_chainStyle="packed"
                app:srcCompat="@drawable/pi2_governmentid_blank"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="start"
                android:id="@+id/overlay_hint"
                android:background="@drawable/pi2_rounded_rectangle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/startEndMargin"
                android:layout_marginRight="@dimen/startEndMargin"
                app:layout_constraintBottom_toTopOf="@+id/disclaimer_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overlay_guide"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_max="500dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overlay_icon_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:importantForAccessibility="no"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/overlay_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.withpersona.sdk2.inquiry.shared.p422ui.ThemeableLottieAnimationView
                        android:id="@+id/overlay_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Overlay Image"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_enableMergePathsForKitKatAndAbove="true"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/pi2_id_front_processing_lottie"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/overlay_text"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="24dp"
                    android:accessibilityLiveRegion="polite"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/overlay_icon_container"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?attr/textAppearanceSubtitle2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.withpersona.sdk2.inquiry.shared.p422ui.Pi2NavigationBar
                android:id="@+id/navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:accessibilityTraversalAfter="@+id/accept_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pi2BackButtonIcon="@drawable/pi2_camera_icon_back"
                app:pi2CancelButtonIcon="@drawable/pi2_camera_close_icon"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/disclaimer_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/flow_layout"
                app:layout_constraintTop_toBottomOf="@+id/overlay"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_max="500dp">
                <ImageView
                    android:id="@+id/disclaimer_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:importantForAccessibility="no"
                    app:srcCompat="@drawable/pi2_lock_icon"/>
                <TextView
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/disclaimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    style="?attr/textAppearanceCaption"/>
            </LinearLayout>
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                app:constraint_referenced_ids="retry_button,accept_button"
                app:flow_horizontalGap="12dp"
                app:flow_horizontalStyle="spread"
                app:flow_verticalGap="12dp"
                app:flow_verticalStyle="spread"
                app:flow_wrapMode="aligned"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <Button
                android:id="@+id/retry_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?attr/personaCameraButtonStyleSecondary"/>
            <Button
                android:id="@+id/accept_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?attr/personaCameraButtonStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <View
        android:id="@+id/flash_screen"
        android:background="#ffffff"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:importantForAccessibility="no"
        android:elevation="2dp"/>
    <FrameLayout
        android:id="@+id/processing"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.withpersona.sdk2.inquiry.governmentid.view.SpotlightView
            android:id="@+id/spotlight_view2"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pi2Radius="100dp"
            app:pi2Target="@+id/progress_bar"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/progress_bar"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/overlay"
            app:layout_constraintEnd_toEndOf="@+id/overlay"
            app:layout_constraintStart_toStartOf="@+id/overlay"
            app:layout_constraintTop_toTopOf="@+id/overlay"/>
    </FrameLayout>
</FrameLayout>
