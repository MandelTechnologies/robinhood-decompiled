<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp">
    <com.robinhood.android.designsystem.infotag.RdsInfoTag
        android:id="@+id/rhy_overview_carousel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tagType="inform"/>
    <com.robinhood.android.designsystem.button.RdsIconButton
        android:id="@+id/rhy_overview_carousel_dismiss_icon"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:contentDescription="@string/general_label_dismiss"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_close_16dp"
        style="?attr/secondaryIconButtonStyle"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/rhy_overview_carousel_asset_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.625"/>
    <ImageView
        android:id="@+id/rhy_overview_carousel_image"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:scaleType="matrix"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rhy_overview_carousel_asset_guideline"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rhy_overview_carousel_animation"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rhy_overview_carousel_asset_guideline"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmallBold"
        android:gravity="bottom"
        android:id="@+id/rhy_overview_carousel_message_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/rhy_overview_carousel_message"
        app:layout_constraintEnd_toStartOf="@+id/rhy_overview_carousel_asset_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_overview_carousel_title"
        app:layout_constraintTop_toBottomOf="@+id/rhy_overview_carousel_title"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularLarge"
        android:gravity="bottom"
        android:id="@+id/rhy_overview_carousel_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/rhy_overview_carousel_action"
        app:layout_constraintEnd_toStartOf="@+id/rhy_overview_carousel_asset_guideline"
        app:layout_constraintStart_toStartOf="@+id/rhy_overview_carousel_title"
        app:layout_constraintTop_toBottomOf="@+id/rhy_overview_carousel_message_title"/>
    <com.robinhood.android.designsystem.button.RdsTextButton
        android:id="@+id/rhy_overview_carousel_action"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:drawableEndCompat="@drawable/ic_rds_arrow_right_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rhy_overview_carousel_title"
        style="?attr/textButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
