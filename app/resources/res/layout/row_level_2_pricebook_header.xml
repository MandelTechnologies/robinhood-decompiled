<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.common.view.RhCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="?attr/surfaceTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/rds_spacing_small"
    android:layout_marginEnd="@dimen/rds_spacing_small"
    android:backgroundTint="?attr/colorBackground1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="end"
            android:id="@+id/bid_quantity_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/level_2_size"
            android:lines="1"
            android:fontFamily="@font/capsule_sans_text_bold"
            app:layout_constraintEnd_toStartOf="@+id/bid_price_txt"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="end"
            android:id="@+id/bid_price_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/level_2_bid"
            android:lines="1"
            android:fontFamily="@font/capsule_sans_text_bold"
            android:layout_marginStart="@dimen/rds_spacing_small"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toStartOf="@+id/ask_price_txt"
            app:layout_constraintHorizontal_weight="37"
            app:layout_constraintStart_toEndOf="@+id/bid_quantity_txt"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="end"
            android:id="@+id/ask_price_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/level_2_ask"
            android:lines="1"
            android:fontFamily="@font/capsule_sans_text_bold"
            android:layout_marginStart="@dimen/rds_spacing_small"
            android:layout_marginEnd="@dimen/rds_spacing_large"
            app:layout_constraintEnd_toStartOf="@+id/ask_quantity_txt"
            app:layout_constraintHorizontal_weight="37"
            app:layout_constraintStart_toEndOf="@+id/bid_price_txt"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:gravity="end"
            android:id="@+id/ask_quantity_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/level_2_size"
            android:lines="1"
            android:fontFamily="@font/capsule_sans_text_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="16"
            app:layout_constraintStart_toEndOf="@+id/ask_price_txt"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.robinhood.android.common.view.RhCardView>
