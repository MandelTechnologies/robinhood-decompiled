<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/newsfeed_disclosure_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?attr/paletteColorStratos">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/newsfeed_disclosure_app_bar_layout"
            android:background="?attr/paletteColorStratos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/paletteColorStratos">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="snap|enterAlwaysCollapsed|scroll"
                app:titleEnabled="false">
                <ImageView
                    android:id="@+id/newsfeed_disclosure_image_view"
                    android:paddingTop="@dimen/rds_spacing_default"
                    android:paddingBottom="@dimen/rds_spacing_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/newsfeed_disclosure_header_image_content_description"
                    app:layout_collapseMode="parallax"
                    app:srcCompat="@drawable/svg_newsfeed_disclosure_header"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/newsfeed_disclosure_content_view_group"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingTop="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_xxlarge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:paddingHorizontal="@dimen/rds_spacing_medium">
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:id="@+id/newsfeed_disclosure_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/rds_spacing_default"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:id="@+id/newsfeed_disclosure_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/rds_spacing_medium"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/newsfeed_disclosure_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/rds_spacing_default"
                    android:layout_weight="1"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.robinhood.android.common.p088ui.ShimmerLoadingView
        android:id="@+id/newsfeed_disclosure_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.robinhood.android.common.view.ErrorView
        android:id="@+id/newsfeed_disclosure_error_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
