<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/scrim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/legacy_spacing_xxlarge"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/legacy_spacing_xxlarge"
            android:text="@string/margin_eligibility_checklist_title"
            android:layout_marginHorizontal="@dimen/legacy_spacing_xxlarge"/>
        <com.robinhood.android.common.view.ProgressChecklistView
            android:id="@+id/checklist"
            android:padding="@dimen/rds_spacing_medium"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowLayoutId="@layout/include_margin_checklist_row_gold"
            app:useDesignSystem="true"/>
    </LinearLayout>
</ScrollView>
