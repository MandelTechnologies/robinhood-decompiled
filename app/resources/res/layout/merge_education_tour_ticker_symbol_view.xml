<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Group
        android:id="@+id/ticker_symbol_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="ticker_symbol_back_btn,ticker_symbol_txt,ticker_symbol_share_btn,ticker_symbol_plus_btn"/>
    <ImageView
        android:id="@+id/ticker_symbol_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:tint="?android:attr/textColorPrimary"
        android:contentDescription="@string/education_tour_ticker_symbol_back_btn_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rds_arrow_left_24dp"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularLarge"
        android:id="@+id/ticker_symbol_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_large"
        app:layout_constraintBottom_toBottomOf="@+id/ticker_symbol_back_btn"
        app:layout_constraintStart_toEndOf="@+id/ticker_symbol_back_btn"
        app:layout_constraintTop_toTopOf="@+id/ticker_symbol_back_btn"/>
    <ImageView
        android:id="@+id/ticker_symbol_share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?android:attr/textColorPrimary"
        android:contentDescription="@string/education_tour_ticker_symbol_plus_btn_content_description"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="@+id/ticker_symbol_back_btn"
        app:layout_constraintEnd_toStartOf="@+id/ticker_symbol_plus_btn"
        app:layout_constraintTop_toTopOf="@+id/ticker_symbol_back_btn"
        app:srcCompat="@drawable/ic_rds_share_android_24dp"/>
    <ImageView
        android:id="@+id/ticker_symbol_plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?android:attr/textColorPrimary"
        android:contentDescription="@string/education_tour_ticker_symbol_share_btn_content_description"
        app:layout_constraintBottom_toBottomOf="@+id/ticker_symbol_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ticker_symbol_back_btn"
        app:srcCompat="@drawable/ic_rds_bubble_plus_24dp"/>
    <View
        android:id="@+id/ticker_symbol_plus_tour_id_holder"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="@+id/ticker_symbol_plus_btn"
        app:layout_constraintStart_toStartOf="@+id/ticker_symbol_plus_btn"
        app:layout_constraintTop_toTopOf="parent"/>
</merge>
