<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/support_chat_list_empty_state_container"
    android:padding="@dimen/rds_spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.pog.RdsPogView
        android:enabled="false"
        android:id="@+id/support_chat_list_empty_state_pog"
        app:layout_constraintBottom_toTopOf="@+id/support_chat_list_empty_state_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:pictogram="@drawable/pict_mono_rds_chat"
        style="?attr/heroPogStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:textColor="?attr/colorForeground2"
        android:gravity="center"
        android:id="@+id/support_chat_list_empty_state_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:text="@string/support_chat_list_empty_state_title"
        app:layout_constraintBottom_toTopOf="@+id/support_chat_list_empty_state_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/support_chat_list_empty_state_pog"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textColor="?attr/colorForeground2"
        android:gravity="center"
        android:id="@+id/support_chat_list_empty_state_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:text="@string/support_chat_list_empty_state_subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/support_chat_list_empty_state_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
