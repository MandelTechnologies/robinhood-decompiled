<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:orientation="vertical"
            android:id="@+id/generic_instant_content"
            android:clipToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rds_spacing_medium"
                    android:layout_marginRight="@dimen/rds_spacing_medium"
                    android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rds_spacing_medium"
                    android:layout_marginRight="@dimen/rds_spacing_medium"
                    android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
                <androidx.compose.p011ui.platform.ComposeView
                    android:id="@+id/grace_period_banner"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.robinhood.android.designsystem.row.RdsRowView
                    android:id="@+id/from_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:primaryText="@string/general_label_from"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.row.RdsRowView
                    android:id="@+id/to_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:primaryText="@string/general_label_to"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.row.RdsRowView
                    android:id="@+id/transfer_amount_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:primaryText="@string/debit_card_amount_row_title"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.row.RdsRowView
                    android:id="@+id/fee_row"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.row.RdsRowView
                    android:id="@+id/acat_match_removal_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:primaryText="@string/acats_clawback_label"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.row.RdsRowView
                    android:id="@+id/status_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:primaryText="@string/general_label_status"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.row.RdsDataRowView
                    android:id="@+id/gold_deposit_boost_row"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:valueIconTint="?attr/paletteColorSolLight"
                    style="?attr/dataRowContainerStyle"/>
                <androidx.compose.p011ui.platform.ComposeView
                    android:id="@+id/grace_period_details"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
        <androidx.compose.p011ui.platform.ComposeView
            android:id="@+id/grace_period_cta"
            android:paddingBottom="@dimen/rds_spacing_default"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.compose.p011ui.platform.ComposeView
        android:id="@+id/compose_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
