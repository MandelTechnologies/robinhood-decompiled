<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_feed_article_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/news_feed_article_source_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="@dimen/rds_spacing_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/news_feed_article_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/legacy_spacing_extra_small"
        app:layout_constraintBaseline_toBaselineOf="@+id/news_feed_article_source_txt"
        app:layout_constraintStart_toEndOf="@+id/news_feed_article_source_txt"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/news_feed_article_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/rds_spacing_default"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toTopOf="@+id/news_feed_article_bottom_barrier"
        app:layout_constraintEnd_toStartOf="@+id/news_feed_article_preview_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_feed_article_source_txt"/>
    <ImageView
        android:id="@+id/news_feed_article_preview_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@null"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_feed_article_title_txt"
        app:layout_constraintTop_toTopOf="@+id/news_feed_article_title_txt"/>
    <ImageView
        android:id="@+id/news_feed_article_hero_preview_img"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="184dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/news_feed_article_first_instrument_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rds_spacing_xsmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/coloredTextViewStyle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/news_feed_article_second_instrument_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/news_feed_article_first_instrument_txt"
        app:layout_constraintStart_toEndOf="@+id/news_feed_article_first_instrument_txt"
        style="?attr/coloredTextViewStyle"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/news_feed_article_bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="news_feed_article_first_instrument_txt,news_feed_article_bottom_space"/>
    <Space
        android:id="@+id/news_feed_article_bottom_space"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
