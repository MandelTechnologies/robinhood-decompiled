<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@+id/month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/month"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/constraintWidthMax"/>
    <TextView
        android:textSize="13sp"
        android:textColor="?attr/colorError"
        android:id="@+id/error_label"
        android:paddingTop="4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/month"
        app:layout_constraintTop_toBottomOf="@+id/month"
        app:layout_constraintWidth_max="@dimen/constraintWidthMax"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorTextAppearance="@style/Persona.Inquiry2.Text.Gone"
        app:layout_constraintBottom_toTopOf="@+id/error_label"
        app:layout_constraintEnd_toStartOf="@+id/day"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_label"
        style="?attr/spinnerStyle">
        <AutoCompleteTextView
            android:ellipsize="end"
            android:id="@+id/month_edit_text"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:clickable="true"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:errorIconDrawable="@null"
        app:errorTextAppearance="@style/Persona.Inquiry2.Text.Gone"
        app:layout_constraintBottom_toBottomOf="@+id/month"
        app:layout_constraintEnd_toStartOf="@+id/year"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/month"
        app:layout_constraintTop_toTopOf="@+id/month"
        app:layout_constraintVertical_bias="1"
        style="?attr/textInputStyle">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/day_edit_text"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="2"
            android:inputType="number"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:errorIconDrawable="@null"
        app:errorTextAppearance="@style/Persona.Inquiry2.Text.Gone"
        app:layout_constraintBottom_toBottomOf="@+id/month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@+id/day"
        app:layout_constraintTop_toTopOf="@+id/month"
        app:layout_constraintVertical_bias="1"
        style="?attr/textInputStyle">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/year_edit_text"
            android:saveEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="4"
            android:inputType="number"
            android:imeOptions="actionNext"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
