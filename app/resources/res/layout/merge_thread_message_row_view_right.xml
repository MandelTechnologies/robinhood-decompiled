<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/inbox_thread_message_avatar_view"
        android:visibility="gone"
        android:layout_width="@dimen/inbox_thread_message_avatar_size"
        android:layout_height="@dimen/inbox_thread_message_avatar_size"
        app:layout_constraintBottom_toBottomOf="@+id/inbox_thread_message_container"
        app:layout_constraintEnd_toEndOf="parent"/>
    <FrameLayout
        android:id="@+id/inbox_thread_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inbox_thread_message_user_start_margin"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/inbox_thread_message_status_container"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginEnd="@dimen/rds_spacing_medium"/>
    <FrameLayout
        android:id="@+id/inbox_thread_message_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="@+id/inbox_thread_message_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inbox_thread_message_container"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:id="@+id/inbox_thread_message_text_status_txt"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        app:layout_constraintEnd_toEndOf="@+id/inbox_thread_message_container"
        app:layout_constraintTop_toBottomOf="@+id/inbox_thread_message_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
