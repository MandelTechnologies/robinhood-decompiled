<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/rds_spacing_medium"
    android:paddingBottom="@dimen/rds_spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/rds_spacing_medium">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/file_type_bottom_sheet_title"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/file_selection_bottom_sheet_camera"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIcon="@drawable/ic_rds_camera_16dp"
        app:primaryText="@string/file_type_bottom_sheet_camera"
        app:showBottomDivider="true"
        style="?attr/rowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/file_selection_bottom_sheet_photos"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIcon="@drawable/ic_rds_image_16dp"
        app:primaryText="@string/file_type_bottom_sheet_photos"
        app:showBottomDivider="true"
        style="?attr/rowContainerStyle"/>
    <com.robinhood.android.designsystem.row.RdsRowView
        android:id="@+id/file_selection_bottom_sheet_pdf"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leadingIcon="@drawable/ic_rds_file_16dp"
        app:primaryText="@string/file_type_bottom_sheet_pdf"
        app:showBottomDivider="true"
        style="?attr/rowContainerStyle"/>
</LinearLayout>
