<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:clipChildren="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayMedium"
                    android:gravity="center_horizontal"
                    android:id="@+id/email_sms_challenge_title_text"
                    android:paddingTop="@dimen/rds_spacing_default"
                    android:paddingBottom="@dimen/rds_spacing_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/rds_spacing_medium"
                    android:paddingEnd="@dimen/rds_spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:gravity="center_horizontal"
                    android:id="@+id/email_sms_challenge_summary_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/rds_spacing_medium"
                    android:paddingEnd="@dimen/rds_spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_sms_challenge_title_text"
                    style="?attr/textAppearanceRegularMedium"/>
                <com.robinhood.android.designsystem.textinput.RdsTextInputContainerView
                    android:id="@+id/email_sms_challenge_input_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_default"
                    android:layout_marginBottom="@dimen/rds_spacing_default"
                    android:layout_marginStart="@dimen/rds_spacing_medium"
                    android:layout_marginEnd="@dimen/rds_spacing_medium"
                    app:layout_constraintBottom_toTopOf="@+id/email_sms_challenge_help_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_sms_challenge_summary_txt"
                    app:layout_constraintVertical_chainStyle="packed"
                    style="?attr/inputContainerHeroStyle">
                    <com.robinhood.android.designsystem.textinput.RdsFormattedEditText
                        android:id="@+id/email_sms_challenge_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_sms_challenge_input_placeholder"
                        android:inputType="number"
                        app:template="@string/email_sms_challenge_input_template"
                        app:useCustomNumpad="true"
                        style="?attr/inputHeroStyle">
                        <requestFocus/>
                    </com.robinhood.android.designsystem.textinput.RdsFormattedEditText>
                </com.robinhood.android.designsystem.textinput.RdsTextInputContainerView>
                <com.robinhood.android.designsystem.button.RdsButton
                    android:textAppearance="?attr/textAppearanceRegularSmallBold"
                    android:id="@+id/email_sms_challenge_help_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rds_spacing_medium"
                    android:layout_marginRight="@dimen/rds_spacing_medium"
                    android:layout_marginBottom="@dimen/rds_spacing_small"
                    android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="?attr/secondaryMonochromeButtonStyle"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.robinhood.android.designsystem.numpad.RdsNumpadView
            android:id="@+id/numpad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:delimiterEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>
    <com.robinhood.android.common.p088ui.ShimmerLoadingView
        android:id="@+id/loading_view"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
