<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/education_lesson_bottom_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rds_spacing_xxlarge"
        android:foreground="@drawable/education_lesson_bottom_gradient"
        android:foregroundTint="?attr/colorBackground1"
        app:layout_constraintTop_toTopOf="@+id/disclosure_footer_buttons_barrier"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foreground="#fff"
        android:foregroundTint="?attr/colorBackground1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/education_lesson_bottom_gradient"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/disclosure_footer_buttons_barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="disclosure_section, footer_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/disclosure_section"
        android:paddingTop="@dimen/rds_spacing_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/footer_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorForeground2"
            android:textColorLink="?attr/colorForeground2"
            android:gravity="center"
            android:id="@+id/first_text_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:useLinkMovementMethod="true"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorForeground2"
            android:textColorLink="?attr/colorForeground2"
            android:gravity="center"
            android:id="@+id/second_text_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:useLinkMovementMethod="true"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/footer_image"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_small"
            android:contentDescription="@null"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.robinhood.android.designsystem.button.RdsIconButton
            android:id="@+id/footer_back_button"
            android:visibility="gone"
            android:layout_width="@dimen/education_lesson_next_btn_size"
            android:layout_height="@dimen/education_lesson_next_btn_size"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            android:tint="?attr/colorForeground1"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            android:backgroundTint="?attr/colorBackground1"
            app:layout_constraintEnd_toStartOf="@+id/footer_next_button"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/ic_rds_arrow_left_24dp"
            style="?attr/secondaryIconButtonStyle"/>
        <com.robinhood.android.designsystem.button.RdsIconButton
            android:id="@+id/footer_next_button"
            android:visibility="gone"
            android:layout_width="@dimen/education_lesson_next_btn_size"
            android:layout_height="@dimen/education_lesson_next_btn_size"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            android:tint="?attr/colorBackground1"
            android:backgroundTint="?attr/colorForeground1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/footer_back_button"
            app:layout_constraintTop_toBottomOf="parent"
            app:srcCompat="@drawable/ic_rds_arrow_right_24dp"
            style="?attr/primaryIconButtonStyle"/>
        <com.robinhood.shared.education.p377ui.lessons.standard.EducationLessonStandardFooterCtaView
            android:id="@+id/footer_cta_buttons"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
