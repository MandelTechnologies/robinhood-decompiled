<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:paddingLeft="@dimen/rds_spacing_medium"
    android:paddingRight="@dimen/rds_spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1"
    android:paddingHorizontal="@dimen/rds_spacing_medium">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:textColor="?attr/colorForeground1"
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="?attr/colorForeground1"
        android:id="@+id/indicator_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_large"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/alert_hub_indicator_move_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_txt"/>
    <RadioGroup
        android:orientation="horizontal"
        android:id="@+id/indicator_move_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator_title">
        <com.robinhood.android.common.p088ui.view.RhRadioButton
            android:id="@+id/crosses_above_btn"
            android:background="@drawable/crosses_above_light_mode_btn"
            android:layout_width="@dimen/alert_hub_ration_btn_size"
            android:layout_height="@dimen/alert_hub_ration_btn_size"
            android:checked="true"
            android:layout_marginEnd="@dimen/rds_spacing_small"/>
        <com.robinhood.android.common.p088ui.view.RhRadioButton
            android:id="@+id/crosses_below_btn"
            android:background="@drawable/crosses_below_light_mode_btn"
            android:layout_width="@dimen/alert_hub_ration_btn_size"
            android:layout_height="@dimen/alert_hub_ration_btn_size"
            android:checked="false"
            android:layout_marginEnd="@dimen/rds_spacing_small"/>
        <com.robinhood.android.common.p088ui.view.RhRadioButton
            android:id="@+id/moves_above_value_btn"
            android:background="@drawable/moves_above_value_light_mode_btn"
            android:layout_width="@dimen/alert_hub_ration_btn_size"
            android:layout_height="@dimen/alert_hub_ration_btn_size"
            android:checked="false"
            android:layout_marginEnd="@dimen/rds_spacing_small"/>
        <com.robinhood.android.common.p088ui.view.RhRadioButton
            android:id="@+id/moves_below_value_btn"
            android:background="@drawable/moves_below_value_light_mode_btn"
            android:layout_width="@dimen/alert_hub_ration_btn_size"
            android:layout_height="@dimen/alert_hub_ration_btn_size"
            android:checked="false"
            android:layout_marginEnd="@dimen/rds_spacing_small"/>
    </RadioGroup>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:id="@+id/indicator_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/alert_hub_indicator_move_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator_move_radio_group"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/price_input_layout"
        android:background="@drawable/price_input_outline"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator_subtitle">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularLarge"
            android:textColor="?attr/colorForeground1"
            android:gravity="center_vertical"
            android:id="@+id/dollar_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dollar_sign"
            android:paddingStart="0dp"
            android:paddingEnd="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/moving_value_edit_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.common.p088ui.view.RhEditText
            android:textAppearance="?attr/textAppearanceRegularLarge"
            android:gravity="center_vertical"
            android:id="@+id/moving_value_edit_txt"
            android:background="@null"
            android:layout_width="184dp"
            android:layout_height="44dp"
            android:layout_marginTop="2dp"
            android:minHeight="@dimen/text_input_hero_min_height"
            android:hint="@string/advanced_alert_set_value_hint"
            android:includeFontPadding="false"
            android:maxLength="13"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dollar_sign"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorForeground2"
            android:id="@+id/current_price_txt"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moving_value_edit_txt"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_input_layout"
        layout="@layout/include_rds_divider"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMediumBold"
        android:textColor="?attr/colorForeground1"
        android:id="@+id/interval_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/alert_hub_interval_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_divider"/>
    <HorizontalScrollView
        android:id="@+id/interval_radio_group_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interval_title">
        <RadioGroup
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:id="@+id/interval_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.robinhood.android.common.p088ui.view.RhRadioButton
                android:textAppearance="?attr/textAppearanceRegularSmallBold"
                android:textColor="@drawable/interval_text_color_selector"
                android:gravity="center"
                android:id="@+id/interval_5m_btn"
                android:background="@drawable/interval_radio_btn_background"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alert_hub_interval_btn_size"
                android:checked="true"
                android:text="@string/interval_five_min"
                android:layout_marginEnd="@dimen/rds_spacing_xsmall"
                android:paddingHorizontal="@dimen/rds_spacing_default"/>
            <com.robinhood.android.common.p088ui.view.RhRadioButton
                android:textAppearance="?attr/textAppearanceRegularSmallBold"
                android:textColor="@drawable/interval_text_color_selector"
                android:gravity="center"
                android:id="@+id/interval_10m_btn"
                android:background="@drawable/interval_radio_btn_background"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alert_hub_interval_btn_size"
                android:checked="false"
                android:text="@string/interval_ten_min"
                android:layout_marginEnd="@dimen/rds_spacing_xsmall"
                android:paddingHorizontal="@dimen/rds_spacing_default"/>
            <com.robinhood.android.common.p088ui.view.RhRadioButton
                android:textAppearance="?attr/textAppearanceRegularSmallBold"
                android:textColor="@drawable/interval_text_color_selector"
                android:gravity="center"
                android:id="@+id/interval_1h_btn"
                android:background="@drawable/interval_radio_btn_background"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alert_hub_interval_btn_size"
                android:checked="false"
                android:text="@string/interval_one_hour"
                android:layout_marginEnd="@dimen/rds_spacing_xsmall"
                android:paddingHorizontal="@dimen/rds_spacing_default"/>
            <com.robinhood.android.common.p088ui.view.RhRadioButton
                android:textAppearance="?attr/textAppearanceRegularSmallBold"
                android:textColor="@drawable/interval_text_color_selector"
                android:gravity="center"
                android:id="@+id/interval_1d_btn"
                android:background="@drawable/interval_radio_btn_background"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alert_hub_interval_btn_size"
                android:checked="false"
                android:text="@string/interval_one_day"
                android:layout_marginEnd="@dimen/rds_spacing_xsmall"
                android:paddingHorizontal="@dimen/rds_spacing_default"/>
            <com.robinhood.android.common.p088ui.view.RhRadioButton
                android:textAppearance="?attr/textAppearanceRegularSmallBold"
                android:textColor="@drawable/interval_text_color_selector"
                android:gravity="center"
                android:id="@+id/interval_1w_btn"
                android:background="@drawable/interval_radio_btn_background"
                android:paddingLeft="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/alert_hub_interval_btn_size"
                android:checked="false"
                android:text="@string/interval_one_week"
                android:paddingHorizontal="@dimen/rds_spacing_default"/>
        </RadioGroup>
    </HorizontalScrollView>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:textColorLink="?attr/colorForeground2"
        android:id="@+id/interval_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/alert_hub_interval_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interval_radio_group_scrollview"
        app:useLinkMovementMethod="true"/>
    <include
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/rds_spacing_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interval_subtitle"
        layout="@layout/include_rds_divider"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:id="@+id/bottom_explain_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:minHeight="48dp"
        android:text="@string/general_label_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
