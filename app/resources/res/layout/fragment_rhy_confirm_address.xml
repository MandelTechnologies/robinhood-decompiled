<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1"
    app:layout_underneathToolbar="true">
    <ScrollView
        android:id="@+id/rhy_confirm_address_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceDisplayMedium"
                android:gravity="center_horizontal"
                android:id="@+id/rhy_confirm_address_title"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingTop="@dimen/rds_spacing_default"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegular"
                android:gravity="center_horizontal"
                android:id="@+id/rhy_confirm_address_subtitle"
                android:paddingLeft="@dimen/rds_spacing_medium"
                android:paddingRight="@dimen/rds_spacing_medium"
                android:paddingBottom="@dimen/rds_spacing_xlarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/rds_spacing_medium"/>
            <com.robinhood.android.designsystem.row.RdsSettingsRowView
                android:id="@+id/rhy_confirm_address_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/rhy_confirm_address_row_primary_text"
                app:metadataText="@string/rhy_confirm_address_row_cta_text"
                app:showBottomDivider="true"
                style="?attr/settingsRowContainerStyle"/>
            <com.robinhood.android.designsystem.row.RdsSettingsRowView
                android:id="@+id/rhy_confirm_shipping_address_row"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="@string/rhy_confirm_mailing_address_row_primary_text"
                app:metadataText="@string/rhy_confirm_address_row_cta_text"
                app:showBottomDivider="true"
                style="?attr/settingsRowContainerStyle"/>
        </LinearLayout>
    </ScrollView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/rhy_confirm_address_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_confirm"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        android:layout_marginVertical="@dimen/rds_spacing_default"
        style="?attr/primaryMonochromeButtonStyle"/>
</LinearLayout>
