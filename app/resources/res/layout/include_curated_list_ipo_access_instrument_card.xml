<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" style="@style/SelectableFrameLayout.Wrap">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="#fff"
        android:padding="@dimen/rds_spacing_default"
        android:layout_width="148sp"
        android:layout_height="@dimen/ipo_access_instrument_card_height"
        android:backgroundTint="?attr/colorBackground1">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:ellipsize="end"
            android:id="@+id/instrument_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/instrument_logo_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            app:layout_constraintBottom_toTopOf="@+id/instrument_symbol_txt"
            app:layout_constraintTop_toBottomOf="@+id/instrument_name_txt"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplaySmall"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/instrument_symbol_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/instrument_change_txt"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.robinhood.android.common.view.AnimatedRhTextView
            android:textAppearance="?attr/textAppearanceRegularSmallBold"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/instrument_change_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
