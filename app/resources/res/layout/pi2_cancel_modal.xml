<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_content"
    android:paddingLeft="@dimen/startEndMargin"
    android:paddingTop="16dp"
    android:paddingRight="@dimen/startEndMargin"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="yes"
    android:paddingHorizontal="@dimen/startEndMargin"
    android:paddingVertical="16dp">
    <TextView
        android:id="@+id/hintTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/pi2_modal_title"
        app:layout_constraintBottom_toTopOf="@+id/hintMessage"
        app:layout_constraintEnd_toEndOf="@+id/flow_layout"
        app:layout_constraintStart_toStartOf="@+id/flow_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="500dp"
        style="?attr/textAppearanceHeadline6"/>
    <TextView
        android:id="@+id/hintMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pi2_modal_subtitle"
        app:layout_constraintBottom_toTopOf="@+id/flow_layout"
        app:layout_constraintEnd_toEndOf="@+id/flow_layout"
        app:layout_constraintStart_toStartOf="@+id/flow_layout"
        app:layout_constraintTop_toBottomOf="@+id/hintTitle"
        app:layout_constraintWidth_max="500dp"
        style="?attr/textAppearanceSubtitle1"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:constraint_referenced_ids="retry_button,close_button"
        app:flow_horizontalGap="12dp"
        app:flow_horizontalStyle="spread"
        app:flow_verticalGap="12dp"
        app:flow_verticalStyle="spread"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintMessage"/>
    <Button
        android:id="@+id/close_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pi2_modal_primary_action"
        android:layout_marginEnd="24dp"/>
    <Button
        android:id="@+id/retry_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pi2_modal_secondary_action"
        android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
