<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.android.common.gold.GoldValuePropView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/value_prop_view"
    android:paddingTop="@dimen/rds_spacing_small"
    android:paddingBottom="@dimen/rds_spacing_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/rds_spacing_small">
    <com.robinhood.android.designsystem.pog.RdsPogView
        android:id="@+id/pog"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        style="?attr/pogStyle"/>
    <ImageView
        android:id="@+id/sparkle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_button_top_spacing"
        android:tint="?attr/colorForeground1"
        android:contentDescription="@null"
        android:layout_marginEnd="@dimen/rds_spacing_default"
        app:srcCompat="@drawable/ic_rds_sparkle_bullet_24dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMediumBold"
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegular"
            android:id="@+id/description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</com.robinhood.android.common.gold.GoldValuePropView>
