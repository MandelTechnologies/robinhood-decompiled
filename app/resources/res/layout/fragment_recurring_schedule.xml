<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:id="@+id/recurring_schedule_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginBottom="@dimen/rds_spacing_xsmall"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/recurring_schedule_subtitle_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:id="@+id/recurring_paycheck_schedule_next_order_date_txt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equity_recurring_paycheck_schedule_next_order_date"/>
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:id="@+id/recurring_schedule_next_order_date_txt"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/rds_spacing_xsmall"
            android:drawableEnd="@drawable/svg_ic_caret_down_8dp"
            android:drawableTint="?attr/colorPrimary"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioGroup
            android:orientation="vertical"
            android:id="@+id/recurring_schedule_frequency_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioButton
                android:id="@+id/recurring_schedule_frequency_paycheck_btn"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/investment_schedule_frequency_paycheck"
                app:secondaryText="@string/equity_recurring_schedule_paycheck_subtitle"
                style="?attr/radioButtonStyle"/>
            <include
                android:id="@+id/recurring_schedule_frequency_paycheck_divider"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                layout="@layout/include_rds_divider"/>
            <com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioButton
                android:id="@+id/recurring_schedule_frequency_daily_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/investment_schedule_frequency_daily"
                app:secondaryText="@string/equity_recurring_schedule_daily_subtitle"
                style="?attr/radioButtonStyle"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                layout="@layout/include_rds_divider"/>
            <com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioButton
                android:id="@+id/recurring_schedule_frequency_weekly_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/investment_schedule_frequency_weekly"
                app:secondaryText=""
                style="?attr/radioButtonStyle"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                layout="@layout/include_rds_divider"/>
            <com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioButton
                android:id="@+id/recurring_schedule_frequency_biweekly_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/investment_schedule_frequency_biweekly"
                app:secondaryText=""
                style="?attr/radioButtonStyle"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                layout="@layout/include_rds_divider"/>
            <com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioButton
                android:id="@+id/recurring_schedule_frequency_monthly_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryText="@string/investment_schedule_frequency_monthly"
                app:secondaryText="@string/equity_recurring_schedule_monthly_subtitle"
                style="?attr/radioButtonStyle"/>
            <include
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/rds_spacing_default"
                android:layout_marginEnd="@dimen/rds_spacing_default"
                layout="@layout/include_rds_divider"/>
        </com.robinhood.android.designsystem.selectioncontrol.LegacyRdsRadioGroup>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorBackground1">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularSmall"
            android:textColor="?attr/colorForeground2"
            android:gravity="center_horizontal"
            android:id="@+id/recurring_schedule_disclaimer_txt"
            android:paddingTop="@dimen/rds_spacing_default"
            android:paddingBottom="@dimen/rds_spacing_default"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/equity_recurring_schedule_disclaimer_other"
            android:color="?android:attr/textColorSecondary"
            android:paddingStart="@dimen/rds_spacing_medium"
            android:paddingEnd="@dimen/rds_spacing_medium"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:layout_gravity="center"
            android:id="@+id/recurring_schedule_done_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            style="?attr/primaryButtonStyle"/>
    </LinearLayout>
</LinearLayout>
