<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingBottom="@dimen/rds_spacing_medium"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <ImageView
        android:id="@+id/card_activation_debit_card_view"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/debit_card_content_description"
        app:layout_constraintBottom_toTopOf="@+id/card_activation_success_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/svg_debit_card"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:gravity="center"
        android:id="@+id/card_activation_success_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/card_activation_card_activated_title"
        app:layout_constraintBottom_toTopOf="@+id/card_activation_success_subheader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center"
        android:id="@+id/card_activation_success_subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_large"
        android:text="@string/card_activation_card_activated_subtitle"
        android:layout_marginStart="@dimen/rds_spacing_large"
        android:layout_marginEnd="@dimen/rds_spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/card_activation_action_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/card_activation_action_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/general_label_done"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/card_activation_later_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="0dp"
        style="?attr/primaryMonochromeButtonStyle"/>
    <ImageView
        android:id="@+id/card_activation_google_pay_image_view"
        android:paddingTop="@dimen/rds_spacing_xxsmall"
        android:paddingBottom="@dimen/rds_spacing_xxsmall"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:contentDescription="@string/card_activation_card_activated_google_pay_content_description"
        android:layout_marginVertical="@dimen/rds_spacing_small"
        android:paddingVertical="@dimen/rds_spacing_xxsmall"
        app:layout_constraintBottom_toBottomOf="@+id/card_activation_action_btn"
        app:layout_constraintEnd_toEndOf="@+id/card_activation_action_btn"
        app:layout_constraintStart_toStartOf="@+id/card_activation_action_btn"
        app:layout_constraintTop_toTopOf="@+id/card_activation_action_btn"
        app:srcCompat="@drawable/google_pay_add_to_gpay_content_dark"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/card_activation_later_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_activation_card_activated_later"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/legacyGhostMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
