<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackground1">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/rds_spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/add_to_list_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.robinhood.android.designsystem.text.RhTextView
                android:id="@+id/stock_symbol_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_default"
                android:layout_marginStart="@dimen/rds_spacing_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="?attr/textAppearanceDisplayMedium"/>
            <com.robinhood.android.designsystem.button.RdsTextButton
                android:id="@+id/edit_stock_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:text="@string/general_action_edit"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintBottom_toBottomOf="@+id/stock_symbol_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/stock_symbol_txt"
                style="?attr/smallTextButtonStyle"/>
            <com.robinhood.android.designsystem.row.RdsHeaderRowView
                android:id="@+id/position_type_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stock_symbol_txt"
                app:primaryText="@string/acats_in_option_input_position_header"/>
            <com.robinhood.android.designsystem.selectioncontrol.NewRdsRadioGroup
                android:orientation="vertical"
                android:id="@+id/position_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/position_type_header">
                <com.robinhood.android.designsystem.selectioncontrol.RdsRadioButtonRowView
                    android:id="@+id/long_position_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:primaryText="@string/acats_in_option_input_long_row_primary"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.selectioncontrol.RdsRadioButtonRowView
                    android:id="@+id/short_position_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:primaryText="@string/acats_in_option_input_short_row_primary"
                    style="?attr/rowContainerStyle"/>
            </com.robinhood.android.designsystem.selectioncontrol.NewRdsRadioGroup>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/borrowing_fee_container"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_medium"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:layout_marginStart="@dimen/rds_spacing_medium"
                android:layout_marginEnd="@dimen/rds_spacing_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/position_radio_group">
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textColor="?attr/colorForeground2"
                    android:id="@+id/borrowing_fee_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?attr/textAppearanceRegularSmall"/>
                <ImageView
                    android:id="@+id/borrowing_fee_info_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@string/acats_in_borrowing_fee_title"
                    android:layout_marginStart="@dimen/rds_spacing_xsmall"
                    app:srcCompat="@drawable/ic_rds_info_12dp"
                    app:tint="?attr/colorForeground2"/>
            </LinearLayout>
            <com.robinhood.android.designsystem.row.RdsHeaderRowView
                android:id="@+id/quantity_type_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/borrowing_fee_container"
                app:primaryText="@string/acats_in_add_equity_quantity_header"/>
            <com.robinhood.android.designsystem.selectioncontrol.NewRdsRadioGroup
                android:orientation="vertical"
                android:id="@+id/shares_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quantity_type_header">
                <com.robinhood.android.designsystem.selectioncontrol.RdsRadioButtonRowView
                    android:id="@+id/all_shares_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:primaryText="@string/acats_in_add_equity_quantity_all"
                    style="?attr/rowContainerStyle"/>
                <com.robinhood.android.designsystem.selectioncontrol.RdsRadioButtonRowView
                    android:id="@+id/specify_amount_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:primaryText="@string/acats_in_add_equity_quantity_specify"
                    style="?attr/rowContainerStyle"/>
            </com.robinhood.android.designsystem.selectioncontrol.NewRdsRadioGroup>
            <com.robinhood.android.designsystem.text.RhTextView
                android:id="@+id/share_amount_label"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_default"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginBottom="@dimen/rds_spacing_default"
                android:text="@string/acats_in_add_equity_number_of_shares_prompt"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                android:layout_marginVertical="@dimen/rds_spacing_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shares_radio_group"
                style="?attr/textAppearanceRegularMedium"/>
            <com.robinhood.android.common.p088ui.view.RhEditText
                android:id="@+id/amount_input"
                android:background="@null"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:hint="@string/general_label_zero"
                android:inputType="number"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintBottom_toBottomOf="@+id/share_amount_label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/share_amount_label"
                app:layout_constraintTop_toTopOf="@+id/share_amount_label"
                app:useCustomNumpad="true"/>
            <include
                android:id="@+id/divider"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/rds_spacing_medium"
                android:layout_marginTop="@dimen/rds_spacing_default"
                android:layout_marginRight="@dimen/rds_spacing_medium"
                android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_amount_label"
                layout="@layout/include_rds_divider"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textColor="?attr/colorForeground2"
                android:gravity="center"
                android:id="@+id/quantity_disclaimer_txt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rds_spacing_default"
                android:text="@string/acats_in_add_equity_whole_shares_disclaimer"
                android:drawablePadding="@dimen/rds_spacing_xsmall"
                android:drawableEnd="@drawable/ic_rds_info_12dp"
                android:drawableTint="?attr/colorForeground2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                style="?attr/textAppearanceRegularSmall"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/add_to_list_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/add_to_list_cta"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/update_asset_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/update_asset_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_confirm"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/delete_from_list_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/delete_from_list_btn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/delete_from_list_cta"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toTopOf="@+id/numpad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/secondaryMonochromeButtonStyle"/>
    <com.robinhood.android.designsystem.numpad.RdsNumpadView
        android:id="@+id/numpad"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:delimiterEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/numpadStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
