<?xml version="1.0" encoding="utf-8"?>
<com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dispute_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceDisplayMedium"
            android:id="@+id/dispute_review_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.robinhood.android.designsystem.row.RdsHeaderRowView
            android:id="@+id/dispute_review_transactions_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inTopPosition="true"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_title"/>
        <com.robinhood.android.cash.disputes.view.transaction.TransactionReviewRowView
            android:id="@+id/dispute_review_single_transaction_row"
            android:background="#fff"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/colorBackground1"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_transactions_header"
            app:showBottomDivider="true"
            app:showTransactionDate="true"
            style="?attr/rowContainerStyle"/>
        <com.robinhood.android.designsystem.row.RdsRowView
            android:id="@+id/dispute_review_multi_transaction_header_row"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_single_transaction_row"
            app:showBottomDivider="true"
            app:trailingIcon="@drawable/inset_caret_down_16dp"
            app:trailingIconTint="?attr/colorForeground3"
            style="?attr/rowContainerStyle"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/dispute_review_transactions_recycler_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_multi_transaction_header_row"/>
        <com.robinhood.android.designsystem.row.RdsHeaderRowView
            android:id="@+id/dispute_review_responses_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inTopPosition="false"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_transactions_recycler_view"
            app:primaryText="@string/dispute_review_responses_header"/>
        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/dispute_review_responses_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_responses_header"/>
        <com.robinhood.android.designsystem.button.RdsButton
            android:id="@+id/dispute_review_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginTop="@dimen/rds_spacing_large"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/dispute_review_submit"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dispute_review_responses_recycler_view"
            app:layout_constraintVertical_bias="1"
            style="?attr/primaryButtonStyle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView>
