<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView
            android:id="@+id/sd_bs_action_list_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.robinhood.android.odyssey.lib.view.SdTextView
                    android:textAppearance="?attr/textAppearanceDisplaySmall"
                    android:gravity="start"
                    android:id="@+id/sd_bs_action_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rds_spacing_medium"
                    android:layout_marginTop="@dimen/rds_spacing_medium"
                    android:layout_marginRight="@dimen/rds_spacing_medium"
                    android:layout_marginHorizontal="@dimen/rds_spacing_medium"/>
                <com.robinhood.android.odyssey.lib.view.SdTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:gravity="start"
                    android:id="@+id/sd_bs_action_list_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rds_spacing_medium"
                    android:layout_marginTop="@dimen/rds_spacing_small"
                    android:layout_marginRight="@dimen/rds_spacing_medium"
                    android:layout_marginHorizontal="@dimen/rds_spacing_medium"
                    app:useLinkMovementMethod="true"/>
                <com.robinhood.android.odyssey.lib.view.SdTypedRowContainer
                    android:orientation="vertical"
                    android:id="@+id/sd_bs_action_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_small"/>
            </LinearLayout>
        </com.robinhood.utils.p409ui.view.FocusSafeNestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.robinhood.android.odyssey.lib.view.SdButton
        android:id="@+id/sd_bs_action_list_primary_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        android:layout_marginVertical="@dimen/rds_spacing_default"
        style="?attr/primaryButtonStyle"/>
</LinearLayout>
