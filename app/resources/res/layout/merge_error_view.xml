<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/error_icon_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/error_title_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/svg_error_triangle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:gravity="center_horizontal"
        android:id="@+id/error_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/error_title"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/error_description_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_icon_img"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center_horizontal"
        android:id="@+id/error_description_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        android:text="@string/error_description"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/error_primary_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_title_txt"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/error_primary_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:layout_marginBottom="@dimen/rds_button_top_spacing"
        android:text="@string/error_try_again"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/error_secondary_btn"
        app:layout_goneMarginBottom="@dimen/rds_spacing_medium"
        style="?attr/primaryButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/error_secondary_btn"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/legacyGhostButtonStyle"/>
</merge>
