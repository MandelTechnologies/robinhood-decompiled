<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/account_center_recycler_view"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorBackground1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/profile_referral_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/profile_referral_shadow_view"
        android:background="?attr/colorBackground3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_referral_view"/>
    <com.robinhood.android.profiles.p218ui.view.ProfileReferralView
        android:id="@+id/profile_referral_view"
        android:background="#fff"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorBackground1"
        app:layout_constraintBottom_toTopOf="@+id/profile_transfer_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_transfer_content"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorBackground1"
        app:layout_constraintBottom_toBottomOf="parent">
        <Space
            android:id="@+id/profile_transfer_top_space"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toTopOf="@+id/profile_transfer_top_barrier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/profile_transfer_top_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="profile_transfer_button"/>
        <com.robinhood.android.designsystem.sparkle.SparkleButton
            android:textColor="?attr/profileReferralButtonForeground"
            android:id="@+id/profile_transfer_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:minWidth="173dp"
            android:text="@string/profiles_transfer_btn"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toTopOf="@+id/profile_transfer_bottom_barrier"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@+id/profile_transfer_top_barrier"
            app:layout_goneMarginStart="@dimen/rds_spacing_medium"
            app:sparkleGradient="?attr/profileReferralButtonBackground"
            style="?attr/primaryButtonStyle"/>
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/profile_transfer_bottom_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="profile_transfer_button"/>
        <Space
            android:id="@+id/profile_transfer_bottom_space"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rds_spacing_default"
            app:layout_constraintTop_toBottomOf="@+id/profile_transfer_bottom_barrier"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Surface.Snackbar"
        android:id="@+id/snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
