<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_underneathToolbar="true">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/transaction_detail_container"
        android:paddingBottom="@dimen/rds_spacing_small"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/transaction_detail_header_appbar"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:backgroundTint="?attr/colorBackground1"
            app:elevation="0dp"
            app:expanded="false">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/transaction_detail_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="snap|exitUntilCollapsed|scroll">
                <androidx.appcompat.widget.Toolbar
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    app:layout_collapseMode="pin"/>
                <com.robinhood.android.common.view.StyleableMapView
                    android:id="@+id/transaction_detail_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:liteMode="true"
                    app:mapStyleResource="?attr/mapViewMapStyle"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/transaction_detail_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/transaction_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_default">
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceDisplayLarge"
                    android:id="@+id/transaction_detail_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/rds_spacing_medium"
                    android:layout_marginEnd="@dimen/rds_spacing_medium"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularMedium"
                    android:id="@+id/transaction_detail_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/rds_spacing_small"
                    android:layout_marginStart="@dimen/rds_spacing_medium"
                    android:layout_marginEnd="@dimen/rds_spacing_medium"/>
                <com.robinhood.android.designsystem.chip.RdsChip
                    android:id="@+id/transaction_detail_category_chip"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_default"
                    android:layout_marginStart="@dimen/rds_spacing_default"
                    android:layout_marginEnd="@dimen/rds_spacing_default"
                    style="?attr/dropdownMonochromeChipStyle"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transaction_detail_recycler_view"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_medium"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <com.robinhood.android.cash.transaction.p079ui.dispute.TransactionDisputesView
                    android:id="@+id/transaction_detail_disputes_view"
                    android:visibility="gone"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/rds_spacing_small"/>
                <com.robinhood.android.designsystem.text.RhTextView
                    android:textAppearance="?attr/textAppearanceRegularSmall"
                    android:textColor="?android:attr/textColorSecondary"
                    android:id="@+id/transaction_detail_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_default"
                    android:layout_marginBottom="@dimen/rds_spacing_default"
                    android:layout_marginStart="@dimen/rds_spacing_medium"
                    android:layout_marginEnd="@dimen/rds_spacing_medium"/>
                <Space
                    android:id="@+id/transaction_detail_bottom_space"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <com.robinhood.android.designsystem.button.RdsButtonBarView
                    android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Achromatic"
                    android:id="@+id/transaction_detail_view_reward"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:secondaryButtonText="@string/card_transaction_detail_view_reward"
                    style="?attr/buttonBarStyle"/>
                <com.robinhood.android.designsystem.button.RdsButton
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/transaction_detail_dispute_transaction"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/rds_spacing_default"
                    android:layout_marginBottom="@dimen/rds_spacing_default"
                    android:text="@string/card_transaction_detail_dispute_transaction"
                    android:layout_marginVertical="@dimen/rds_spacing_default"
                    style="?attr/legacyGhostButtonStyle"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:id="@+id/transaction_detail_pulldown_content"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingTop="@dimen/rds_spacing_medium"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:paddingBottom="@dimen/rds_spacing_medium"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:paddingHorizontal="@dimen/rds_spacing_medium"
            android:paddingVertical="@dimen/rds_spacing_medium"
            app:layout_anchor="@+id/transaction_detail_header"
            app:layout_anchorGravity="bottom">
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularLarge"
                android:id="@+id/transaction_detail_pulldown_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:textAppearance="?attr/textAppearanceRegularMedium"
                android:id="@+id/transaction_detail_pulldown_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rds_spacing_default"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.robinhood.android.cash.transaction.p079ui.FraudPromptView
        android:layout_gravity="bottom"
        android:id="@+id/transaction_detail_fraud_prompt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.robinhood.android.common.p088ui.ShimmerLoadingView
        android:id="@+id/loading_view"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
