<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/paletteColorCosmonautLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/rhy_waitlist_sign_up_confirmation_tooltip"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/rhy_waitlist_sign_up_confirmation_lottie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">
        <com.robinhood.android.designsystem.text.RhTextView
            android:textAppearance="?attr/textAppearanceRegularMedium"
            android:textColor="@color/mobius_nova"
            android:gravity="center_vertical"
            android:background="@drawable/rhy_waitlist_tooltip_background"
            android:paddingLeft="@dimen/rds_spacing_default"
            android:paddingTop="@dimen/rds_spacing_small"
            android:paddingRight="@dimen/rds_spacing_default"
            android:paddingBottom="@dimen/rds_spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rhy_waitlist_sign_up_confirmation_tooltip"
            android:drawablePadding="@dimen/rds_spacing_small"
            android:drawableEnd="@drawable/ic_rds_sound_on_24dp"
            android:backgroundTint="@color/tooltip_background"
            android:drawableTint="@color/mobius_nova"
            android:paddingHorizontal="@dimen/rds_spacing_default"
            android:paddingVertical="@dimen/rds_spacing_small"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/tooltip_background"
            android:rotation="180"
            android:importantForAccessibility="no"
            android:tintMode="src_in"
            app:srcCompat="@drawable/tooltip_nib"/>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rhy_waitlist_sign_up_confirmation_lottie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/rhy_waitlist_sign_up_confirmation_title"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rhy_waitlist_sign_up_confirmation_tooltip"
        app:layout_constraintWidth_percent="0.8"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Day"
        android:textAppearance="?attr/textAppearanceDisplayLarge"
        android:gravity="center"
        android:id="@+id/rhy_waitlist_sign_up_confirmation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:text="@string/rhy_waitlist_sign_up_confirmation_title"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/rhy_waitlist_sign_up_confirmation_text"
        app:layout_constraintTop_toBottomOf="@+id/rhy_waitlist_sign_up_confirmation_lottie"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Day"
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:gravity="center"
        android:id="@+id/rhy_waitlist_sign_up_confirmation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_row_horizontal_spacing"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/rds_row_horizontal_spacing"
        android:text="@string/rhy_waitlist_sign_up_confirmation_text"
        android:layout_marginHorizontal="@dimen/rds_row_horizontal_spacing"
        app:layout_constraintBottom_toTopOf="@+id/rhy_waitlist_sign_up_confirmation_done_button"
        app:layout_constraintTop_toBottomOf="@+id/rhy_waitlist_sign_up_confirmation_title"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:theme="@style/ThemeOverlay.Robinhood.DesignSystem.Day"
        android:id="@+id/rhy_waitlist_sign_up_confirmation_done_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_ok"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        style="?attr/primaryMonochromeButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
