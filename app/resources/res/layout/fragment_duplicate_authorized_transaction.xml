<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/duplicate_transaction_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplayMedium"
        android:id="@+id/duplicate_transaction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/duplicate_transaction_subtitle"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_small"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_title"/>
    <com.robinhood.android.cash.disputes.view.DateSelectionView
        android:id="@+id/duplicate_transaction_date_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:isDateRangeSelection="true"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_subtitle"
        app:layout_goneMarginTop="@dimen/rds_spacing_small"/>
    <com.robinhood.android.cash.disputes.view.transaction.TransactionSingleSelectionRowView
        android:id="@+id/duplicate_transaction_previous_selection_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_date_selection"
        style="?attr/rowContainerStyle"/>
    <View
        android:id="@+id/duplicate_transaction_previous_selection_divider"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="?attr/colorBackground3"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_previous_selection_row"/>
    <ImageView
        android:id="@+id/duplicate_transaction_empty_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintBottom_toTopOf="@+id/duplicate_transaction_empty_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_previous_selection_divider"
        app:layout_constraintVertical_chainStyle="packed"
        app:scarlet_affectedAttributes="srcCompat"
        app:srcCompat="@drawable/svg_caution_triangle"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmallBold"
        android:textColor="?attr/colorForeground2"
        android:gravity="center_horizontal"
        android:id="@+id/duplicate_transaction_empty_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:text="@string/dispute_duplicate_transaction_selection_empty_title"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/duplicate_transaction_empty_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_empty_image"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularSmall"
        android:textColor="?attr/colorForeground2"
        android:gravity="center_horizontal"
        android:id="@+id/duplicate_transaction_empty_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginTop="@dimen/rds_spacing_xsmall"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:text="@string/dispute_duplicate_transaction_selection_empty_description"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/duplicate_transaction_review_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_empty_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/duplicate_transaction_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/duplicate_transaction_review_button"
        app:layout_constraintTop_toBottomOf="@+id/duplicate_transaction_previous_selection_divider"
        app:layout_goneMarginBottom="@dimen/rds_spacing_medium"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/duplicate_transaction_snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toTopOf="@+id/duplicate_transaction_review_button"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/duplicate_transaction_review_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rds_spacing_small"
        app:layout_constraintBottom_toTopOf="@+id/duplicate_transaction_continue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?attr/legacyGhostButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/duplicate_transaction_continue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rds_spacing_medium"
        android:layout_marginRight="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_default"
        android:text="@string/general_label_continue"
        android:layout_marginHorizontal="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1"
        style="?attr/primaryButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
