<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/fraud_prompt_shadow"
        android:background="?attr/colorBackground3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/fraud_prompt_background"
        android:background="#fff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorBackground1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fraud_prompt_shadow"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceDisplaySmall"
        android:id="@+id/fraud_prompt_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:text="@string/card_transaction_fraud_prompt_title"
        android:layout_marginStart="@dimen/rds_spacing_medium"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fraud_prompt_shadow"/>
    <com.robinhood.android.designsystem.text.RhTextView
        android:textAppearance="?attr/textAppearanceRegularMedium"
        android:id="@+id/fraud_prompt_message_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_default"
        android:text="@string/card_transaction_fraud_prompt_message"
        app:layout_constraintEnd_toEndOf="@+id/fraud_prompt_title_txt"
        app:layout_constraintStart_toStartOf="@+id/fraud_prompt_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/fraud_prompt_title_txt"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/fraud_prompt_negative_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_transaction_fraud_prompt_action_negative"
        android:layout_marginEnd="@dimen/rds_spacing_small"
        app:layout_constraintEnd_toStartOf="@+id/fraud_prompt_positive_btn"
        app:layout_constraintTop_toTopOf="@+id/fraud_prompt_positive_btn"
        style="?attr/legacyGhostNegativeButtonStyle"/>
    <com.robinhood.android.designsystem.button.RdsButton
        android:id="@+id/fraud_prompt_positive_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rds_spacing_medium"
        android:layout_marginBottom="@dimen/rds_spacing_medium"
        android:text="@string/card_transaction_fraud_prompt_action_positive"
        android:layout_marginEnd="@dimen/rds_spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fraud_prompt_message_txt"
        style="?attr/legacyGhostPositiveButtonStyle"/>
</merge>
