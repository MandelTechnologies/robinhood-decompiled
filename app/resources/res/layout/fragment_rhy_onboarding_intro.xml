<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.robinhood.android.cash.rhy.tab.p077v2.productmarketing.RhyProductMarketingView
        android:id="@+id/onboarding_intro_marketing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:assetContext="rhyOnboarding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_intro_bottom_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:background="?attr/colorBackground3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@+id/onboarding_intro_bottom_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <FrameLayout
        android:id="@+id/onboarding_intro_bottom_panel"
        android:background="#fff"
        android:paddingLeft="@dimen/rds_spacing_small"
        android:paddingTop="@dimen/rds_spacing_default"
        android:paddingRight="@dimen/rds_spacing_small"
        android:paddingBottom="@dimen/rds_spacing_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorBackground1"
        android:paddingHorizontal="@dimen/rds_spacing_small"
        android:paddingVertical="@dimen/rds_spacing_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.robinhood.android.designsystem.button.RdsButton
            android:layout_gravity="center"
            android:id="@+id/onboarding_intro_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rhy_onboarding_upsell_get_started"
            style="?attr/primaryMonochromeButtonStyle"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
