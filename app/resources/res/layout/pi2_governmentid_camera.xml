<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/inner_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/preview_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/preview_bottom"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/preview_top">
                <androidx.camera.view.PreviewView
                    android:id="@+id/preview_view"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:keepScreenOn="true"
                    android:importantForAccessibility="no"/>
                <com.withpersona.sdk2.camera.camera2.Camera2PreviewView
                    android:id="@+id/camera2_preview"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:keepScreenOn="true"
                    android:importantForAccessibility="no"/>
            </FrameLayout>
            <View
                android:id="@+id/preview_dim"
                android:background="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0"
                app:layout_constraintBottom_toBottomOf="@+id/overlay"
                app:layout_constraintEnd_toEndOf="@+id/overlay"
                app:layout_constraintStart_toStartOf="@+id/overlay"
                app:layout_constraintTop_toTopOf="@+id/overlay"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:indeterminateTint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="@+id/overlay"
                app:layout_constraintEnd_toEndOf="@+id/overlay"
                app:layout_constraintStart_toStartOf="@+id/overlay"
                app:layout_constraintTop_toTopOf="@+id/overlay"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/scanning_animation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/overlay_guide"
                app:layout_constraintEnd_toEndOf="@+id/overlay_guide"
                app:layout_constraintStart_toStartOf="@+id/overlay_guide"
                app:layout_constraintTop_toTopOf="@+id/overlay_guide"
                app:lottie_autoPlay="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_loop="true"/>
            <com.withpersona.sdk2.inquiry.governmentid.view.SpotlightView
                android:id="@+id/spotlight_view"
                android:background="#000"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pi2Radius="8dp"
                app:pi2Target="@+id/overlay"/>
            <View
                android:id="@+id/overlay"
                android:background="@drawable/pi2_rounded_outline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/startEndMargin"
                android:layout_marginRight="@dimen/startEndMargin"
                android:importantForAccessibility="no"
                android:layout_marginHorizontal="@dimen/startEndMargin"
                app:layout_constraintBottom_toBottomOf="@+id/overlay_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/overlay_guide"/>
            <com.withpersona.sdk2.inquiry.governmentid.view.ScanningView
                android:id="@+id/scanning_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="@+id/overlay_hint"
                app:layout_constraintEnd_toEndOf="@+id/overlay"
                app:layout_constraintStart_toStartOf="@+id/overlay"
                app:layout_constraintTop_toTopOf="@+id/overlay_guide"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/preview_top"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="top"
                app:constraint_referenced_ids="overlay,scanning_view"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/preview_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="overlay,scanning_view"/>
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:accessibilityLiveRegion="polite"
                app:autoSizeMinTextSize="2sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/navigation_bar"
                style="?attr/textAppearanceHeadline6"/>
            <Space
                android:id="@+id/top_spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/overlay_guide"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintVertical_weight="2"/>
            <ImageView
                android:id="@+id/overlay_guide"
                android:padding="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                app:layout_constrainedHeight="true"
                app:layout_constraintBottom_toTopOf="@+id/overlay_hint"
                app:layout_constraintEnd_toEndOf="@+id/overlay"
                app:layout_constraintStart_toStartOf="@+id/overlay"
                app:layout_constraintTop_toBottomOf="@+id/top_spacer"
                app:layout_constraintVertical_chainStyle="packed"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="start"
                android:id="@+id/overlay_hint"
                android:background="@drawable/pi2_rounded_rectangle"
                android:layout_width="0dp"
                android:layout_height="80dp"
                app:layout_constraintBottom_toTopOf="@+id/disclaimer_layout"
                app:layout_constraintEnd_toEndOf="@+id/overlay"
                app:layout_constraintStart_toStartOf="@+id/overlay"
                app:layout_constraintTop_toBottomOf="@+id/overlay_guide"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_max="500dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/overlay_icon_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:importantForAccessibility="no"
                    android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/overlay_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.withpersona.sdk2.inquiry.shared.p422ui.ThemeableLottieAnimationView
                        android:id="@+id/overlay_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Overlay Image"
                        android:importantForAccessibility="no"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_enableMergePathsForKitKatAndAbove="true"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/pi2_id_front_processing_lottie"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/overlay_text"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="24dp"
                    android:accessibilityLiveRegion="polite"
                    android:paddingVertical="16dp"
                    app:autoSizeMinTextSize="1sp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/overlay_icon_container"
                    app:layout_constraintTop_toTopOf="parent"
                    style="?attr/textAppearanceSubtitle2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.withpersona.sdk2.inquiry.shared.p422ui.Pi2NavigationBar
                android:id="@+id/navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                android:accessibilityTraversalAfter="@+id/flashlight_toggle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pi2BackButtonIcon="@drawable/pi2_camera_icon_back"
                app:pi2CancelButtonIcon="@drawable/pi2_camera_close_icon"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/disclaimer_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/capture_tips"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overlay_hint"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintWidth_max="500dp">
                <TextView
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/disclaimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="8dp"
                    style="?attr/textAppearanceCaption"/>
            </LinearLayout>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/capture_tips"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/pi2_info_icon"
                app:drawableTint="#ffffff"
                app:layout_constraintBottom_toTopOf="@+id/capture_button_spacer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/disclaimer_layout"
                style="?attr/textAppearanceCaption"/>
            <Space
                android:id="@+id/capture_button_spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/capture_button"
                app:layout_constraintTop_toBottomOf="@+id/capture_tips"
                app:layout_constraintVertical_weight="1"/>
            <Button
                android:id="@+id/capture_button"
                android:background="@drawable/pi2_camera_shutter_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/pi2_camera_button_description"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toTopOf="@+id/bottom_spacer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/capture_button_spacer"/>
            <Space
                android:id="@+id/bottom_spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/capture_button"
                app:layout_constraintVertical_weight="1"/>
            <ToggleButton
                android:id="@+id/flashlight_toggle"
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:layout_width="@dimen/pi2_navigation_bar_icon_size"
                android:layout_height="@dimen/pi2_navigation_bar_icon_size"
                android:button="@drawable/pi2_camera_torch_button"
                android:textOn=""
                android:textOff=""
                android:contentDescription="@string/pi2_governmentid_flash_toggle"
                app:layout_constraintBottom_toBottomOf="@+id/capture_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/capture_button"
                app:layout_constraintTop_toTopOf="@+id/capture_button"/>
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/hint"
                android:background="@drawable/pi2_hint_background"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/overlay_guide"
                app:layout_constraintEnd_toEndOf="@+id/overlay_hint"
                app:layout_constraintStart_toStartOf="@+id/overlay_hint"
                app:layout_constraintTop_toTopOf="@+id/overlay_guide"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/camera_initializing_progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@android:color/darker_gray"/>
    </FrameLayout>
</FrameLayout>
