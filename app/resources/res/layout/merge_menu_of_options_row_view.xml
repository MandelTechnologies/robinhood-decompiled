<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/row_leading_icon_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rds_spacing_small"
            android:contentDescription="@string/menu_of_options_tactical_badge_content_description"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/row_leading_icon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu_of_options_badge"/>
        <ImageView
            android:id="@+id/row_leading_icon"
            android:contentDescription="@string/menu_of_options_tactical_content_description"
            android:importantForAccessibility="no"
            android:layout_marginEnd="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/row_text_container"
            app:layout_constraintStart_toEndOf="@+id/row_leading_icon_badge"
            app:layout_constraintTop_toTopOf="parent"
            style="?attr/rowLeadingIconStyle"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/row_leading_icon"
            app:layout_constraintTop_toTopOf="parent">
            <com.robinhood.android.designsystem.text.RhTextView
                android:id="@+id/row_primary_text"
                android:duplicateParentState="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/row_secondary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                style="?attr/rowPrimaryTextStyle"/>
            <com.robinhood.android.designsystem.text.RhTextView
                android:id="@+id/row_secondary_text"
                android:duplicateParentState="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/row_primary_text"
                style="?attr/rowSecondaryTextStyle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@+id/row_bottom_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/rds_spacing_medium"
            android:layout_marginRight="@dimen/rds_spacing_medium"
            android:layout_marginHorizontal="@dimen/rds_spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            layout="@layout/include_rds_divider"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
