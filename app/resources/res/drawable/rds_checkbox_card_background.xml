<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="?attr/colorBackground1"/>
            <stroke
                android:width="1dp"
                android:color="?attr/colorForeground3"/>
            <padding
                android:left="@dimen/rds_spacing_default"
                android:top="12dp"
                android:right="@dimen/rds_spacing_default"
                android:bottom="@dimen/rds_spacing_default"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="?attr/colorBackground1"/>
            <stroke
                android:width="1dp"
                android:color="?attr/colorForeground1"/>
            <padding
                android:left="@dimen/rds_spacing_default"
                android:top="12dp"
                android:right="@dimen/rds_spacing_default"
                android:bottom="@dimen/rds_spacing_default"/>
        </shape>
    </item>
</selector>
