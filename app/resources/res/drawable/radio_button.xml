<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true"
        android:id="@+id/on"
        android:drawable="@drawable/radio_button_checked"/>
    <item
        android:id="@+id/off"
        android:drawable="@drawable/radio_button_unchecked"/>
    <transition
        android:drawable="@drawable/radio_button_on_to_off_animation"
        android:toId="@+id/off"
        android:fromId="@+id/on"/>
    <transition
        android:drawable="@drawable/radio_button_off_to_on_animation"
        android:toId="@+id/on"
        android:fromId="@+id/off"/>
</animated-selector>
