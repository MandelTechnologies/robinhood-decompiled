<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android" xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@+id/rhy_show_text_state"
        motion:constraintSetStart="@+id/rhy_hide_text_state"/>
    <Transition
        motion:constraintSetEnd="@+id/rhy_show_continue_btn_state"
        motion:constraintSetStart="@+id/rhy_show_text_state"/>
    <ConstraintSet android:id="@+id/rhy_hide_text_state">
        <Constraint
            android:textAppearance="?attr/textAppearanceRegularLarge"
            android:gravity="center"
            android:id="@+id/rhy_open_account_status_text"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingTop="@dimen/rds_spacing_default"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:paddingBottom="@dimen/rds_spacing_default"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_medium"
            android:paddingHorizontal="@dimen/rds_spacing_medium"
            android:paddingVertical="@dimen/rds_spacing_default"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/rhy_open_account_animation_bottom_guideline"/>
        <Constraint
            android:id="@+id/rhy_open_account_setup_rewards_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/rhy_account_opened_setup_rewards"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="parent"
            style="?attr/primaryMonochromeButtonStyle"/>
        <Constraint
            android:id="@+id/rhy_open_account_rewards_later_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/rhy_account_opened_rewards_later"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="parent"
            style="?attr/secondaryMonochromeButtonStyle"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/rhy_show_text_state"
        motion:deriveConstraintsFrom="@+id/rhy_hide_text_state">
        <Constraint
            android:textAppearance="?attr/textAppearanceRegularLarge"
            android:gravity="center"
            android:id="@+id/rhy_open_account_status_text"
            android:paddingLeft="@dimen/rds_spacing_medium"
            android:paddingTop="@dimen/rds_spacing_default"
            android:paddingRight="@dimen/rds_spacing_medium"
            android:paddingBottom="@dimen/rds_spacing_default"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/rds_spacing_medium"
            android:paddingVertical="@dimen/rds_spacing_default"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/rhy_open_account_animation_bottom_guideline"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/rhy_show_continue_btn_state"
        motion:deriveConstraintsFrom="@+id/rhy_show_text_state">
        <Constraint
            android:id="@+id/rhy_open_account_setup_rewards_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/rhy_account_opened_setup_rewards"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            motion:layout_constraintBottom_toTopOf="@+id/rhy_open_account_rewards_later_btn"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            style="?attr/primaryMonochromeButtonStyle"/>
        <Constraint
            android:id="@+id/rhy_open_account_rewards_later_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/rhy_account_opened_rewards_later"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            style="?attr/secondaryMonochromeButtonStyle"/>
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/rhy_show_continue_btn_sunset_state"
        motion:deriveConstraintsFrom="@+id/rhy_show_text_state">
        <Constraint
            android:id="@+id/rhy_open_account_setup_rewards_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rds_spacing_default"
            android:layout_marginBottom="@dimen/rds_spacing_default"
            android:text="@string/rhy_account_opened_setup_rewards"
            android:layout_marginStart="@dimen/rds_spacing_medium"
            android:layout_marginEnd="@dimen/rds_spacing_medium"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            style="?attr/primaryMonochromeButtonStyle"/>
    </ConstraintSet>
</MotionScene>
